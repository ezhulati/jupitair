            <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
          </svg>
          <span class="text-gray-700">All North Texas</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Details Section -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="max-w-7xl overflow-x-hidden container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        
        <!-- Dynamic After-Hours Notice (only shows 7pm-7am CST) -->
        {service.emergency && (
          <div id="after-hours-notice" class="hidden mb-8 p-4 bg-yellow-50 border border-yellow-200 rounded-lg">
            <div class="min-w-0 flex items-center gap-3">
              <svg class="w-5 h-5 text-yellow-600 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              <div class="text-sm">
                <span class="font-semibold text-yellow-800">After-hours service:</span>
                <span class="text-yellow-700 ml-1">$250 emergency fee applies (7pm - 7am CST)</span>
