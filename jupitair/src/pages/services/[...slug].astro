                    </PremiumButton>
                    
                    <Button href="/contact" variant="outline" size="lg" class="w-full">
                      Schedule Online
                    </Button>
                  </div>
                  
                  <div class="mt-4 pt-4 border-t border-gray-200">
                    <p class="text-xs text-gray-500">Available 24/7 for emergencies</p>
                  </div>
                </div>
