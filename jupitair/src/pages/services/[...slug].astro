              prose-ol:my-6 prose-ol:text-gray-700
              prose-strong:text-gray-900 prose-strong:font-bold
              prose-a:text-primary-600 prose-a:font-semibold prose-a:no-underline hover:prose-a:text-primary-700 hover:prose-a:underline
              prose-table:shadow-lg prose-table:rounded-xl prose-table:overflow-hidden prose-table:my-8
              prose-thead:bg-gradient-to-r prose-thead:from-gray-100 prose-thead:to-gray-50 prose-thead:border-b-2 prose-thead:border-gray-200
