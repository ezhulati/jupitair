  <!-- FAQ Section -->
  <section class="section-full bg-white">
    <div class="site-container py-16 sm:py-20 lg:py-24">
      <FAQAccordion faqs={faqs} title="Duct Cleaning FAQs" />
    </div>
  </section>

  <!-- Contact Form Section -->
  <section id="contact" class="w-full bg-gray-50">
    <div class="site-container section-padding">
      <div class="text-center mb-12">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl md:text-4xl font-bold text-gray-900 mb-4">
