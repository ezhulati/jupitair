---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/layout/Hero.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';

const pageTitle = "Commercial HVAC Services | Jupitair HVAC | North Texas Business Solutions";
const pageDescription = "Professional commercial HVAC services for North Texas businesses. Installation, repair, maintenance, and emergency services for offices, retail, restaurants, and industrial facilities.";
