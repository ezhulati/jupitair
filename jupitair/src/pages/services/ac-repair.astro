---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PremiumHero from '../../components/layout/PremiumHero.astro';
import PremiumCard from '../../components/ui/PremiumCard.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import ContactForm from '../../components/forms/ContactForm.astro';
import Badge from '../../components/ui/Badge.astro';
import FAQAccordion from '../../components/ui/FAQAccordion.astro';
import RealReviews from '../../components/reviews/RealReviews.astro';

const pageTitle = "AC Repair Services | Fast Air Conditioning Repair | Jupitair HVAC";
const pageDescription = "Emergency AC repair in North Texas. Same-day service, certified technicians, all brands. 2-hour response time. Call (940) 390-5676 for immediate AC repair.";

const faqs = [
  {
    question: "How quickly can you respond to an AC emergency?",
    answer: "We offer 24/7 emergency service with a typical response time of 2 hours or less in the North Texas area. Our dispatchers prioritize emergency calls and will have a technician to you as quickly as possible."
  },
  {
    question: "What brands of air conditioners do you repair?",
    answer: "We're certified to repair all major AC brands including Trane, Carrier, Lennox, Rheem, Goodman, Bryant, American Standard, York, Amana, and more. Our technicians carry parts for most common repairs."
  },
  {
    question: "How much does AC repair typically cost?",
    answer: "AC repair costs vary based on the issue. Simple repairs like capacitor replacements start around $200-400, while compressor replacements can range from $1,500-3,000. We always provide upfront pricing before any work begins."
  },
  {
    question: "Should I repair or replace my AC unit?",
    answer: "Generally, if your AC is less than 10 years old and the repair cost is less than 50% of a new unit's cost, repair is recommended. For units over 15 years old or requiring major repairs, replacement may be more cost-effective."
  },
  {
    question: "What are signs my AC needs repair?",
    answer: "Common signs include: warm air blowing, weak airflow, unusual noises, frequent cycling, high humidity, water leaks, bad odors, or increased energy bills. If you notice any of these, call for service immediately."
  },
  {
    question: "Do you offer warranties on AC repairs?",
    answer: "Yes! We provide a 1-year warranty on all labor and manufacturer warranties on parts. Our work is guaranteed, and we stand behind every repair we perform."
  },
  {
    question: "Can I prevent AC breakdowns?",
    answer: "Absolutely! Regular maintenance is key. Change filters monthly, keep outdoor units clear of debris, schedule annual tune-ups, and address small issues before they become major problems."
  },
  {
    question: "Why is my AC freezing up?",
    answer: "AC freezing is usually caused by restricted airflow (dirty filter), low refrigerant, dirty coils, or thermostat issues. Turn off your AC immediately and call for service to prevent compressor damage."
  }
];
---

<BaseLayout
  title={pageTitle}
  description={pageDescription}
  keywords="AC repair, air conditioning repair, emergency AC repair, North Texas AC repair, same-day AC service, cooling system repair"

  overlayHeader={true}>
  <PremiumHero 
    title="Professional AC<br>Repair Services"
    subtitle="Same-Day Emergency Service"
    description="When your AC breaks down, we're here 24/7. Expert technicians, guaranteed repairs, and transparent pricing. Most repairs completed the same day."
    ctaPrimary={{ text: "Get Emergency Service", href: "tel:9403905676" }}
    ctaSecondary={{ text: "Get Quote", href: "/contact" }}
    variant="gradient"
    height="lg" class="hero-section"
  />

  <!-- Emergency Banner - CONSISTENT DESIGN SYSTEM -->
  <section class="section-full bg-emergency-600">
    <div class="site-container py-3">
      <p class="text-center text-white font-bold">
        AC Emergency? Call (940) 390-5676 for 2-Hour Response Time
      </p>
    </div>
  </section>

  <!-- Common AC Problems - CONSISTENT DESIGN SYSTEM -->
  <section class="section-full bg-white">
    <div class="site-container section-padding">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Common AC Problems We Fix</h2>
        <p class="text-base sm:text-lg lg:text-xl text-gray-700 max-w-3xl mx-auto">
          Our certified technicians diagnose and repair all AC issues quickly and efficiently
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="p-6 space-y-4">
            <div class="w-12 h-12 bg-emergency-100 rounded-full flex items-center justify-center flex-shrink-0">
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-900">AC Won't Turn On</h3>
            <p class="text-sm sm:text-base text-gray-700">Electrical issues, thermostat problems, or circuit breaker trips</p>
            <Badge variant="emergency" size="sm">Emergency Service</Badge>
          </div>
        </Card>

        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="p-6 space-y-4">
            <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-900">Blowing Warm Air</h3>
            <p class="text-sm sm:text-base text-gray-700">Low refrigerant, dirty coils, or compressor failure</p>
            <Badge variant="warning" size="sm">Same Day Fix</Badge>
          </div>
        </Card>

        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="p-6 space-y-4">
            <div class="w-12 h-12 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-900">Frozen Evaporator Coil</h3>
            <p class="text-sm sm:text-base text-gray-700">Restricted airflow, low refrigerant, or dirty filter</p>
            <Badge variant="warning" size="sm">2-Hour Response</Badge>
          </div>
        </Card>

        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="p-6 space-y-4">
            <div class="w-12 h-12 bg-secondary-100 rounded-full flex items-center justify-center flex-shrink-0">
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-900">Strange Noises</h3>
            <p class="text-sm sm:text-base text-gray-700">Grinding, squealing, or banging sounds from unit</p>
            <Badge variant="primary" size="sm">Diagnostic Available</Badge>
          </div>
        </Card>

        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="p-6 space-y-4">
            <div class="w-12 h-12 bg-success-100 rounded-full flex items-center justify-center flex-shrink-0">
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-900">Poor Air Quality</h3>
            <p class="text-sm sm:text-base text-gray-700">Dirty filters, duct issues, or humidity problems</p>
            <Badge variant="success" size="sm">Air Quality Test</Badge>
          </div>
        </Card>

        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="p-6 space-y-4">
            <div class="w-12 h-12 bg-secondary-100 rounded-full flex items-center justify-center flex-shrink-0">
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-900">High Energy Bills</h3>
            <p class="text-sm sm:text-base text-gray-700">Inefficient operation due to maintenance issues</p>
            <Badge variant="primary" size="sm">Efficiency Check</Badge>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Our Repair Process - CONSISTENT DESIGN SYSTEM -->
  <section class="section-full bg-gray-50">
    <div class="site-container section-padding">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Our AC Repair Process</h2>
        <p class="text-base sm:text-lg lg:text-xl text-gray-700">Fast, reliable service every time</p>
      </div>

      <div class="max-w-4xl mx-auto space-y-6">
        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="flex gap-4 sm:gap-6">
            <div class="w-12 h-12 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-lg sm:text-xl flex-shrink-0">
              1
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2">Emergency Dispatch</h3>
              <p class="text-sm sm:text-base text-gray-700">Call us and we'll dispatch a certified technician within 2 hours for emergency repairs.</p>
            </div>
          </div>
        </Card>

        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="flex gap-4 sm:gap-6">
            <div class="w-12 h-12 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-lg sm:text-xl flex-shrink-0">
              2
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2">Complete Diagnosis</h3>
              <p class="text-sm sm:text-base text-gray-700">Our technician performs a thorough diagnostic to identify the root cause of the problem.</p>
            </div>
          </div>
        </Card>

        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="flex gap-4 sm:gap-6">
            <div class="w-12 h-12 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-lg sm:text-xl flex-shrink-0">
              3
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2">Upfront Pricing</h3>
              <p class="text-sm sm:text-base text-gray-700">You'll receive a detailed quote before any work begins. No surprises or hidden fees.</p>
            </div>
          </div>
        </Card>

        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="flex gap-4 sm:gap-6">
            <div class="w-12 h-12 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-lg sm:text-xl flex-shrink-0">
              4
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2">Professional Repair</h3>
              <p class="text-sm sm:text-base text-gray-700">Using quality parts and proven techniques, we fix your AC right the first time.</p>
            </div>
          </div>
        </Card>

        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="flex gap-4 sm:gap-6">
            <div class="w-12 h-12 bg-primary-600 text-white rounded-full flex items-center justify-center font-bold text-lg sm:text-xl flex-shrink-0">
              5
            </div>
            <div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2">Quality Guarantee</h3>
              <p class="text-sm sm:text-base text-gray-700">All repairs come with our satisfaction guarantee and warranty on parts and labor.</p>
            </div>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Customer Reviews - BUILD TRUST -->
  <RealReviews 
    title="What Our AC Repair Customers Say"
    serviceFilter="repair"
    maxReviews={6}
  />

  <!-- Pricing - CONSISTENT DESIGN SYSTEM -->
  <section class="section-full bg-white">
    <div class="site-container section-padding">
      <div class="text-center mb-12">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">Transparent AC Repair Pricing</h2>
        <p class="text-base sm:text-lg lg:text-xl text-gray-700">No hidden fees or surprise charges</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 lg:gap-8 max-w-5xl mx-auto">
        <Card class="overflow-visible"  variant="outline" >
          <div class="text-center space-y-4">
            <h3 class="text-xl sm:text-2xl font-bold text-gray-900">Diagnostic</h3>
            <div class="text-3xl sm:text-4xl font-bold text-primary-600">$89</div>
            <p class="text-gray-800">Complete system inspection and diagnosis</p>
            <ul class="text-left space-y-2 text-sm">
              <li class="flex items-center gap-2">
                <span class="text-success-600">✓</span>
                <span>Full system evaluation</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-success-600">✓</span>
                <span>Written estimate</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-success-600">✓</span>
                <span>Waived if repair completed</span>
              </li>
            </ul>
          </div>
        </Card>

        <Card variant="outline"  class="border-primary-500 relative">
          <div class="text-center space-y-4">
            <div class="mb-4">
              <Badge variant="primary">Most Common</Badge>
            </div>
            <h3 class="text-xl sm:text-2xl font-bold text-gray-900">Minor Repairs</h3>
            <div class="text-xl sm:text-2xl lg:text-3xl font-bold text-primary-600">$150-$400</div>
            <p class="text-gray-800">Capacitors, contactors, thermostats</p>
            <ul class="text-left space-y-2 text-sm">
              <li class="flex items-center gap-2">
                <span class="text-success-600">✓</span>
                <span>Same-day completion</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-success-600">✓</span>
                <span>1-year warranty</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-success-600">✓</span>
                <span>Quality OEM parts</span>
              </li>
            </ul>
          </div>
        </Card>

        <Card class="overflow-visible"  variant="outline" >
          <div class="text-center space-y-4">
            <h3 class="text-xl sm:text-2xl font-bold text-gray-900">Major Repairs</h3>
            <div class="text-xl sm:text-2xl lg:text-3xl font-bold text-primary-600">$500-$1,500</div>
            <p class="text-gray-800">Compressors, coils, major components</p>
            <ul class="text-left space-y-2 text-sm">
              <li class="flex items-center gap-2">
                <span class="text-success-600">✓</span>
                <span>Extended warranties</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-success-600">✓</span>
                <span>Licensed & insured</span>
              </li>
              <li class="flex items-center gap-2">
                <span class="text-success-600">✓</span>
                <span>Replacement consultation</span>
              </li>
            </ul>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section-full bg-white">
    <div class="site-container py-16 sm:py-20 lg:py-24">
      <FAQAccordion faqs={faqs} title="AC Repair FAQs" />
    </div>
  </section>

  <!-- Contact Form - CONSISTENT DESIGN SYSTEM -->
  <section id="contact" class="w-full bg-gray-50">
    <div class="site-container section-padding">
      <div class="text-center mb-12">
        <h2 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
          Get Fast AC Repair Service
        </h2>
        <p class="text-base sm:text-lg text-gray-700">
          Emergency service available 24/7 • Same-day repairs
        </p>
      </div>
      <ContactForm formId="ac-repair-contact-form" />
    </div>
  </section>
</BaseLayout>