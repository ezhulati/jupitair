---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PremiumHero from '../../components/layout/PremiumHero.astro';
import Card from '../../components/ui/Card.astro';
import PremiumCard from '../../components/ui/PremiumCard.astro';
import Button from '../../components/ui/Button.astro';
import Badge from '../../components/ui/Badge.astro';
import Icon from '../../components/ui/Icon.astro';
import WhyChooseUs from '../../components/layout/WhyChooseUs.astro';
import ReviewsSection from '../../components/reviews/ReviewsSection.astro';

const residentialServices = [
  {
    title: 'AC Repair',
    description: 'Fast, reliable air conditioning repair for your home. Same-day service available.',
    price: 'From $89',
    link: '/services/ac-repair',
    icon: 'cooling',
    emergency: true,
    popular: true
  },
  {
    title: 'Heating Repair',
    description: 'Expert furnace and heating system repair to keep your family warm.',
    price: 'From $89',
    link: '/services/heating-repair',
    icon: 'heating',
    emergency: true
  },
  {
    title: 'HVAC Installation',
    description: 'Energy-efficient AC and heating system installation with licensed & insured.',
    price: 'From $3,500',
    link: '/services/hvac-installation',
    icon: 'installation',
    emergency: false,
    popular: true
  },
  {
    title: 'AC Maintenance',
    description: 'Annual tune-ups to prevent breakdowns and extend system life.',
    price: 'From $129',
    link: '/services/maintenance',
    icon: 'maintenance',
    emergency: false
  },
  {
    title: 'Emergency Service',
    description: '24/7 emergency HVAC repair when you need it most.',
    price: 'From $149',
    link: 'tel:9403905676',
    icon: 'emergency',
    emergency: true
  },
  {
    title: 'Duct Services',
    description: 'Duct cleaning, repair, and sealing for better comfort and efficiency.',
    price: 'From $800',
    link: '/services/duct-sealing',
    icon: 'ducts',
    emergency: false
  },
  {
    title: 'Indoor Air Quality',
    description: 'Air purifiers, humidifiers, and filtration systems for healthier air.',
    price: 'From $1,200',
    link: '/services/indoor-air-quality',
    icon: 'air-quality',
    emergency: false
  },
  {
    title: 'Smart Thermostats',
    description: 'WiFi thermostat installation for energy savings and convenience.',
    price: 'From $149',
    link: '/services/thermostat-installation',
    icon: 'thermostat',
    emergency: false
  }
];

const serviceAreas = [
  'Frisco', 'Plano', 'McKinney', 'Allen', 
  'Prosper', 'The Colony', 'Little Elm', 'Addison'
];

const pageTitle = "Residential HVAC Services | Jupitair HVAC";
const pageDescription = "Complete residential HVAC services in North Texas. AC repair, heating installation, maintenance, and 24/7 emergency service.";
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  canonical="https://jupitairhvac.com/services/residential"
  overlayHeader={true}
>
  <!-- Premium Hero Section -->
  <PremiumHero 
    title="Residential HVAC Services"
    subtitle="Complete Home Comfort Solutions"
    description="Professional heating and cooling services for North Texas homeowners. From emergency repairs to new installations, we've got you covered."
    ctaPrimary={{ text: "Call (940) 390-5676", href: "tel:9403905676" }}
    ctaSecondary={{ text: "Get Free Quote", href: "/contact" }}
    variant="gradient"
    height="md"
  />

  <!-- Service Cards Section -->
  <section class="pt-16 pb-20 sm:pt-20 sm:pb-24 lg:pt-24 lg:pb-28 bg-gray-50">
    <div class="site-container">
      <div class="text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
          Our Residential Services
        </h2>
        <p class="text-xl text-gray-600 max-w-3xl mx-auto">
          Comprehensive HVAC solutions designed to keep your home comfortable year-round
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        {residentialServices.map((service) => (
          <Card variant="elevated"  class="h-full flex flex-col hover:shadow-xl transition-shadow">
            <div class="flex items-start gap-4 mb-4">
              <div class="w-14 h-14 bg-primary-100 rounded-full flex items-center justify-center flex-shrink-0">
                {service.icon === 'cooling' && (
                  <svg class="w-7 h-7 text-primary-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                  </svg>
                )}
                {service.icon === 'heating' && (
                  <svg class="w-7 h-7 text-orange-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M13.5.67s.74 2.65.74 4.8c0 2.06-1.35 3.73-3.41 3.73-2.07 0-3.63-1.67-3.63-3.73l.03-.36C5.21 7.51 4 10.62 4 14c0 4.42 3.58 8 8 8s8-3.58 8-8C20 8.61 17.41 3.8 13.5.67zM11.71 19c-1.78 0-3.22-1.4-3.22-3.14 0-1.62 1.05-2.76 2.81-3.12 1.77-.36 3.6-1.21 4.62-2.58.39 1.29.59 2.65.59 4.04 0 2.65-2.15 4.8-4.8 4.8z"/>
                  </svg>
                )}
                {service.icon === 'installation' && (
                  <svg class="w-7 h-7 text-green-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M7 14l5-5 5 5H7z"/>
                    <path d="M5 20v-2h14v2H5z"/>
                    <path d="M12 2C6.48 2 2 6.48 2 12h2c0-4.42 3.58-8 8-8s8 3.58 8 8h2c0-5.52-4.48-10-10-10z"/>
                  </svg>
                )}
                {service.icon === 'maintenance' && (
                  <svg class="w-7 h-7 text-blue-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M22.7 19l-9.1-9.1c.9-2.3.4-5-1.5-6.9-2-2-5-2.4-7.4-1.3L9 6 6 9 1.6 4.7C.4 7.1.9 10.1 2.9 12.1c1.9 1.9 4.6 2.4 6.9 1.5l9.1 9.1c.4.4 1 .4 1.4 0l2.3-2.3c.5-.4.5-1.1.1-1.4z"/>
                  </svg>
                )}
                {service.icon === 'emergency' && (
                  <svg class="w-7 h-7 text-red-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M8.27 3L3 8.27v7.46L8.27 21h7.46L21 15.73V8.27L15.73 3M8.41 7L12 10.59 15.59 7 17 8.41 13.41 12 17 15.59 15.59 17 12 13.41 8.41 17 7 15.59 10.59 12 7 8.41"/>
                  </svg>
                )}
                {service.icon === 'ducts' && (
                  <svg class="w-7 h-7 text-gray-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M3 3h18v18H3V3zm2 2v14h14V5H5zm2 2h10v2H7V7zm0 4h10v2H7v-2zm0 4h10v2H7v-2z"/>
                  </svg>
                )}
                {service.icon === 'air-quality' && (
                  <svg class="w-7 h-7 text-teal-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M14.5 17c0 1.65-1.35 3-3 3s-3-1.35-3-3h2c0 .55.45 1 1 1s1-.45 1-1-.45-1-1-1H2v-2h9.5c1.65 0 3 1.35 3 3zM19 6.5C19 4.57 17.43 3 15.5 3S12 4.57 12 6.5h2c0-.83.67-1.5 1.5-1.5s1.5.67 1.5 1.5S16.33 8 15.5 8H2v2h13.5c1.93 0 3.5-1.57 3.5-3.5zm-.5 4.5H2v2h16.5c.83 0 1.5.67 1.5 1.5s-.67 1.5-1.5 1.5v2c1.93 0 3.5-1.57 3.5-3.5S20.43 11 18.5 11z"/>
                  </svg>
                )}
                {service.icon === 'thermostat' && (
                  <svg class="w-7 h-7 text-purple-600" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm-1-13h2v6h-2zm0 8h2v2h-2z"/>
                  </svg>
                )}
              </div>
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900 mb-1">
                  {service.title}
                </h3>
                <div class="flex flex-wrap gap-2">
                  {service.popular && (
                    <Badge variant="success" size="sm">Popular</Badge>
                  )}
                  {service.emergency && (
                    <Badge variant="error" size="sm">24/7</Badge>
                  )}
                </div>
              </div>
            </div>
            
            <p class="text-gray-600 mb-4 flex-grow">
              {service.description}
            </p>
            
            <div class="space-y-3">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-500">Starting at</span>
                <span class="text-lg font-semibold text-primary-600">{service.price}</span>
              </div>
              
              <Button 
                href={service.link} 
                variant={service.emergency ? "emergency" : "primary"}
                size="md" 
                class="w-full justify-center"
              >
                {service.link.startsWith('tel:') ? 'Call Now' : 'Learn More'}
              </Button>
            </div>
          </Card>
        ))}
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="pt-16 pb-20 sm:pt-20 sm:pb-24 lg:pt-24 lg:pb-28 bg-white">
    <div class="site-container">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div>
          <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-6">
            Serving All of North Texas
          </h2>
          <p class="text-lg text-gray-600 mb-8">
            Our experienced technicians provide residential HVAC services throughout the North Texas area. 
            With strategic locations and a fleet of fully-stocked service vehicles, we can respond quickly 
            to your heating and cooling needs.
          </p>
          
          <div class="grid grid-cols-2 gap-4">
            {serviceAreas.map((area) => (
              <a href={`/${area.toLowerCase().replace(' ', '-')}`} class="group">
                <Card variant="outline"  class="hover:shadow-lg transition-all">
                  <div class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-600 group-hover:text-primary-700" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="font-medium text-gray-900 group-hover:text-primary-600">
                      {area}
                    </span>
                  </div>
                </Card>
              </a>
            ))}
          </div>
        </div>
        
        <Card variant="outline"  class="border-gray-200 bg-white">
          <div class="text-center">
            <div class="w-20 h-20 bg-white rounded-full flex items-center justify-center mx-auto mb-6">
              <svg class="w-10 h-10 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
            </div>
            <h3 class="text-2xl font-bold text-gray-900 mb-4">
              Same-Day Service Available
            </h3>
            <p class="text-gray-600 mb-6">
              Most repairs completed the same day. Emergency service available 24/7 for urgent issues.
            </p>
            <div class="space-y-2 text-left max-w-xs mx-auto">
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">Licensed & insured technicians</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">Upfront, transparent pricing</span>
              </div>
              <div class="flex items-center gap-2">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700">90-day warranty on repairs</span>
              </div>
            </div>
            <Button href="tel:9403905676" variant="emergency" size="lg" class="w-full justify-center mt-6">
              Call Now: (940) 390-5676
            </Button>
          </div>
        </Card>
      </div>
    </div>
  </section>

  <!-- Why Choose Us -->
  <WhyChooseUs />

  <!-- Reviews -->
  <ReviewsSection />

  <!-- Final CTA -->
  <section class="pt-16 pb-20 sm:pt-20 sm:pb-24 lg:pt-24 lg:pb-28 bg-gradient-to-br from-primary-600 to-blue-700">
    <div class="site-container text-center">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
        Ready to Schedule Your Service?
      </h2>
      <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
        Join thousands of satisfied homeowners who trust Jupitair HVAC for all their heating and cooling needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
        <Button 
          href="tel:9403905676" 
          variant="secondary" 
          size="xl" 
          class="min-w-[200px] justify-center"
        >
          <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
            <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
          </svg>
          Call (940) 390-5676
        </Button>
        <Button 
          href="/contact" 
          size="xl" 
          class="min-w-[200px] justify-center border-2 border-white text-white bg-transparent hover:bg-white hover:text-primary-700"
        >
          Get Free Quote
        </Button>
      </div>
      <p class="text-sm text-blue-200 mt-6">
        Available 24/7 for emergency service • Free estimates • Licensed & insured
      </p>
    </div>
  </section>
</BaseLayout>