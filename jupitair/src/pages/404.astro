---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import PremiumCard from '../components/ui/PremiumCard.astro';
import Card from '../components/ui/Card.astro';

const suggestedPages = [
 { title: 'AC Repair', href: '/services/ac-repair', icon: 'cooling' },
 { title: 'Heating Repair', href: '/services/heating-repair', icon: 'heating' },
 { title: 'Emergency Service', href: '/services/emergency-hvac', icon: 'emergency' },
 { title: 'Get Quote', href: '/#contact', icon: 'quote' },
];

const popularCities = [
 'Frisco', 'Plano', 'McKinney', 'Allen'
];
---

<BaseLayout 
 title="404 - Page Not Found | Jupitair HVAC" 
 description="The page you're looking for cannot be found. Let us help you find what you need."
 noindex={true}
>
 <div class="min-h-screen flex items-center justify-center px-4 w-full bg-gradient-to-br from-gray-50 via-white to-blue-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900">
 <!-- Animated Background Elements -->
 <div class="absolute inset-0 overflow-hidden pointer-events-none">
 <div class="absolute top-20 left-10 w-72 h-72 bg-blue-500 rounded-full filter blur-[128px] opacity-20 animate-float"></div>
 <div class="absolute bottom-20 right-10 w-96 h-96 bg-purple-500 rounded-full filter blur-[128px] opacity-20 animate-float-delayed"></div>
 </div>

 <div class="relative z-10 max-w-4xl mx-auto text-center">
 <!-- 404 Animation -->
 <div class="mb-8 relative">
 <div class="text-[150px] sm:text-[200px] font-bold leading-none select-none">
 <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-blue-600 bg-clip-text text-transparent animate-gradient-shift inline-block">
 404
 </span>
 </div>
 
 <!-- Animated AC Unit -->
 <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
 <div class="w-32 h-32 relative animate-spin-slow">
 <svg class="w-full h-full text-blue-200 dark:text-blue-800" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
 <path d="M12 2C6.48 2 2 6.48 2 12s4.48 10 10 10 10-4.48 10-10S17.52 2 12 2zm-2 15l-5-5 1.41-1.41L10 14.17l7.59-7.59L19 8l-9 9z"/>
 </svg>
 </div>
 </div>
 </div>

 <!-- Error Message -->
 <h1 class="text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl sm:text-5xl font-bold text-gray-900 dark:text-white mb-4 animate-fade-in">
 Oops! This Page is Out of Service
 </h1>
 
 <p class="text-xl text-gray-600 dark:text-gray-400 mb-8 max-w-2xl mx-auto animate-fade-in-delayed">
 Just like a broken AC on a hot Texas day, this page seems to have stopped working. 
 Let's get you back to a page that's running smoothly!
 </p>

 <!-- Search Bar -->
 <Card variant="outline"  class="border-gray-200 bg-white">
 <form action="/search" method="get" class="overflow-x-hidden flex items-center p-2">
 <input
 type="search"
 name="q"
 placeholder="Search for services, locations, or information..."
 class="flex-1 px-4 py-3 bg-transparent border-0 focus:outline-none text-gray-900 dark:text-white placeholder-gray-500"
 />
 <button
 type="submit"
 class="px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors flex items-center gap-2"
 >
 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
 </svg>
 Search
 </button>
 </form>
 </Card>

 <!-- Quick Actions -->
 <div class="mb-12">
 <h2 class="text-xl sm:text-2xl font-semibold text-gray-900 dark:text-white mb-6">
 Popular Pages
 </h2>
 <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 max-w-3xl mx-auto">
 {suggestedPages.map((page) => (
 <Card variant="outline"  class="border-gray-200 bg-white">
 <a href={page.href} class="block p-6 text-center">
 <div class={`w-16 h-16 mx-auto mb-3 rounded-xl flex items-center justify-center
 ${page.icon === 'cooling' ? 'bg-cyan-100 text-cyan-600' : ''}
 ${page.icon === 'heating' ? 'bg-orange-100 text-orange-600' : ''}
 ${page.icon === 'emergency' ? 'bg-red-100 text-red-600' : ''}
 ${page.icon === 'quote' ? 'bg-green-100 text-green-600' : ''}
 `}>
 {page.icon === 'cooling' && (
 <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" />
 </svg>
 )}
 {page.icon === 'heating' && (
 <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.986-7C14 5 16.09 5.777 17.656 7.343A7.975 7.975 0 0120 13a7.975 7.975 0 01-2.343 5.657z" />
 </svg>
 )}
 {page.icon === 'emergency' && (
 <svg class="w-8 h-8" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
 <path d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
 </svg>
 )}
 {page.icon === 'quote' && (
 <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
 </svg>
 )}
 </div>
 <h3 class="font-semibold text-gray-900 dark:text-white">{page.title}</h3>
 </a>
 </Card>
 ))}
 </div>
 </div>

 <!-- Service Areas -->
 <div class="mb-12">
 <p class="text-gray-600 dark:text-gray-400 mb-4">
 Looking for HVAC service in your area?
 </p>
 <div class="flex flex-wrap justify-center gap-3">
 {popularCities.map((city) => (
 <a
 href={`/${city.toLowerCase()}`}
 class="px-4 py-2 bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 hover:border-blue-500 hover:text-blue-600 transition-all"
 >
 {city}
 </a>
 ))}
 </div>
 </div>

 <!-- CTAs -->
 <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
 <Button href="/" variant="primary" size="lg">
 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
 </svg>
 Back to Homepage
 </Button>
 
 <Button href="tel:9403905676" variant="emergency" size="lg">
 <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
 <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
 </svg>
 Call for Help
 </Button>
 </div>

 <!-- Support Message -->
 <p class="mt-8 text-sm text-gray-500 dark:text-gray-400">
 Error Code: 404 | Page ID: {Math.random().toString(36).substr(2, 9).toUpperCase()}
 </p>
 </div>
 </div>
</BaseLayout>

<style>
 @keyframes float {
 0%, 100% {
 transform: translateY(0px);
 }
 50% {
 transform: translateY(-20px);
 }
 }

 @keyframes gradient-shift {
 0%, 100% {
 background-position: 0% 50%;
 }
 50% {
 background-position: 100% 50%;
 }
 }

 @keyframes spin-slow {
 from {
 transform: rotate(0deg);
 }
 to {
 transform: rotate(360deg);
 }
 }

 @keyframes fade-in {
 from {
 opacity: 0;
 transform: translateY(20px);
 }
 to {
 opacity: 1;
 transform: translateY(0);
 }
 }

 @keyframes slide-up {
 from {
 opacity: 0;
 transform: translateY(40px);
 }
 to {
 opacity: 1;
 transform: translateY(0);
 }
 }

 @keyframes scale-in {
 from {
 opacity: 0;
 transform: scale(0.9);
 }
 to {
 opacity: 1;
 transform: scale(1);
 }
 }

 .animate-float {
 animation: float 6s ease-in-out infinite;
 }

 .animate-float-delayed {
 animation: float 6s ease-in-out 3s infinite;
 }

 .animate-gradient-shift {
 background-size: 200% 200%;
 animation: gradient-shift 3s ease infinite;
 }

 .animate-spin-slow {
 animation: spin-slow 10s linear infinite;
 }

 .animate-fade-in {
 animation: fade-in 0.6s ease-out forwards;
 }

 .animate-fade-in-delayed {
 animation: fade-in 0.6s ease-out 0.2s forwards;
 opacity: 0;
 }

 .animate-slide-up {
 animation: slide-up 0.8s ease-out 0.4s forwards;
 opacity: 0;
 }

 .animate-scale-in {
 animation: scale-in 0.5s ease-out forwards;
 }

 /* Stagger animation for grid items */
 .animate-scale-in:nth-child(1) { animation-delay: 0.1s; }
 .animate-scale-in:nth-child(2) { animation-delay: 0.2s; }
 .animate-scale-in:nth-child(3) { animation-delay: 0.3s; }
 .animate-scale-in:nth-child(4) { animation-delay: 0.4s; }
</style>

<script>
 // Auto-search functionality
 document.addEventListener('DOMContentLoaded', () => {
 const searchInput = document.querySelector('input[type="search"]');
 
 // Focus search input after page load
 setTimeout(() => {
 searchInput?.focus();
 }, 1000);
 
 // Track 404 error in analytics
 if (typeof gtag !== 'undefined') {
 gtag('event', 'page_view', {
 page_title: '404 Error',
 page_location: window.location.href,
 page_path: window.location.pathname
 });
 }
 });
</script>