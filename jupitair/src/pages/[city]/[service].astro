            <!-- Service Features -->
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 mb-6">
              <h3 class="text-lg font-semibold text-gray-900 mb-4">Why Choose Our {service.title} Service?</h3>
