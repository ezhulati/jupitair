---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PremiumHero from '../../components/layout/PremiumHero.astro';
import PremiumCard from '../../components/ui/PremiumCard.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import ReviewsSection from '../../components/reviews/ReviewsSection.astro';

const rtuSizes = [
  { tons: '3', price: '$8K - $12K', ideal: 'Small retail shops, offices' },
  { tons: '5', price: '$12K - $18K', ideal: 'Restaurants, larger stores' },
  { tons: '7.5', price: '$18K - $25K', ideal: 'Small office buildings' },
  { tons: '10', price: '$25K - $35K', ideal: 'Strip mall anchors' },
  { tons: '12.5', price: '$35K - $45K', ideal: 'Small warehouses' },
  { tons: '15', price: '$45K - $55K', ideal: 'Larger retail spaces' }
];

const benefits = [
  {
    title: 'Energy Savings',
    value: 'Up to 40%',
    desc: 'Modern high-efficiency units',
    icon: '‚ö°'
  },
  {
    title: 'Faster Install',
    value: '1-2 Days',
    desc: 'Minimal business disruption',
    icon: '‚è±Ô∏è'
  },
  {
    title: 'ROI Period',
    value: '3-5 Years',
    desc: 'Through energy savings',
    icon: 'üí∞'
  },
  {
    title: 'Warranty',
    value: '10+ Years',
    desc: 'Parts & compressor coverage',
    icon: 'shield'
  }
];

const process = [
  { step: '1', title: 'Rooftop Assessment', desc: 'Free evaluation of existing units' },
  { step: '2', title: 'Equipment Sizing', desc: 'Load calculations & efficiency analysis' },
  { step: '3', title: 'Crane Coordination', desc: 'Schedule equipment removal/placement' },
  { step: '4', title: 'Installation', desc: 'Professional installation with curb adapters' },
  { step: '5', title: 'Commissioning', desc: 'System startup and verification' },
  { step: '6', title: 'Documentation', desc: 'Warranty registration & training' }
];

const brands = [
  'Carrier', 'Trane', 'Daikin', 'York', 'Lennox', 'Rheem'
];

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "RTU Replacement Services",
  "provider": {
    "@type": "HVACBusiness",
    "name": "Jupitair HVAC"
  },
  "areaServed": "Dallas-Fort Worth Metroplex",
  "description": "Rooftop unit replacement services from $15K to $150K",
  "offers": {
    "@type": "AggregateOffer",
    "priceRange": "$15,000 - $150,000"
  }
};
---

<BaseLayout
  title="RTU Replacement DFW | Rooftop Unit Installation | $15K-$150K"
  description="Professional rooftop unit replacement in Dallas-Fort Worth. 3-50+ ton RTU installation with crane service. Energy-efficient upgrades save 40%. Call (940) 390-5676."
  keywords="RTU replacement, rooftop unit replacement, commercial rooftop AC, RTU installation DFW"
  canonical="https://jupitairhvac.com/commercial/rtu-replacement"

  overlayHeader={true}>
  <script type="application/ld+json" set:html={JSON.stringify(schema)} />

  <PremiumHero
    title="RTU Replacement for Small Business"
    subtitle="$8K to $45K Projects"
    description="Professional rooftop unit replacement for strip malls, restaurants, and small offices. 3-15 ton units installed quickly with minimal business disruption."
    ctaPrimary={{ text: "Call (940) 390-5676", href: "tel:9403905676" }}
    ctaSecondary={{ text: "Get Free Quote", href: "/commercial/quote" }}
    variant="gradient"
    height="lg" class="hero-section"
  />

  <!-- Urgency Bar -->
  <section class="bg-emergency-600 text-white py-4">
    <div class="site-container section-padding">
      <div class="flex items-center justify-center gap-4 text-center">
        <svg class="w-6 h-6 animate-pulse" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
        <span class="font-bold">Failed RTU? Emergency replacement available with same-day crane service</span>
        <svg class="w-6 h-6 animate-pulse" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
  </section>

  <!-- RTU Sizes & Pricing -->
  <section class="section-full bg-white">
    <div class="site-container section-padding">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <Badge variant="primary" class="mb-4">Transparent Pricing</Badge>
          <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            RTU Replacement Pricing by Size
          </h2>
          <p class="text-lg sm:text-xl text-gray-600">
            Complete installation including crane service and startup
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
          {rtuSizes.map((size, index) => (
            <PremiumCard class="overflow-visible"  
              variant={index < 3 ? "elevated" : "default"} 
               
              class={index < 3 ? "border-2 border-primary-200 hover:shadow-2xl" : "hover:shadow-xl"}
            >
              <div class="text-center">
                <div class="text-lg sm:text-xl sm:text-2xl font-bold text-gray-900 mb-2">{size.tons} Ton</div>
                <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl font-bold text-primary-600 mb-3">{size.price}</div>
                <p class="text-sm text-gray-600 mb-4">{size.ideal}</p>
                <Button href="/contact" variant="outline" size="sm" class="w-full">
                  Get Quote ‚Üí
                </Button>
              </div>
            </Card>
          ))}
        </div>

        <div class="bg-gray-50 rounded-2xl p-8 text-center">
          <p class="text-lg font-semibold text-gray-900 mb-2">
            üí° Licensed & Insured Professionals üí°
          </p>
          <p class="text-gray-600">
            Professional installation with manufacturer warranties. Utility rebates may apply for high-efficiency units.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Key Benefits -->
  <section class="section-full bg-gradient-to-br from-gray-50 to-white">
    <div class="site-container section-padding">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Why Replace Your Aging RTU?
          </h2>
          <p class="text-lg sm:text-xl text-gray-600">
            Modern RTUs deliver immediate benefits to your bottom line
          </p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {benefits.map(benefit => (
            <Card class="overflow-visible"  variant="elevated"  class="text-center">
              <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl mb-3">{benefit.icon}</div>
              <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl font-bold text-primary-600 mb-2">{benefit.value}</div>
              <h3 class="font-bold text-gray-900 mb-1">{benefit.title}</h3>
              <p class="text-sm text-gray-600">{benefit.desc}</p>
            </Card>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Complete Service Process -->
  <section class="section-full bg-white">
    <div class="site-container section-padding">
      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
          <div>
            <Badge variant="primary" class="mb-4">Our Process</Badge>
            <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-6">
              Professional RTU Replacement Process
            </h2>
            <p class="text-lg text-gray-600 mb-8">
              We handle everything from assessment to commissioning, ensuring minimal disruption to your business operations.
            </p>

            <div class="space-y-4">
              {process.map(item => (
                <div class="flex gap-4">
                  <div class="w-10 h-10 rounded-full bg-primary-100 text-primary-600 flex items-center justify-center font-bold flex-shrink-0">
                    {item.step}
                  </div>
                  <div>
                    <h3 class="font-semibold text-gray-900">{item.title}</h3>
                    <p class="text-sm text-gray-600">{item.desc}</p>
                  </div>
                </div>
              ))}
            </div>
          </div>

          <div class="bg-gray-900 text-white rounded-2xl p-8">
            <h3 class="text-lg sm:text-xl sm:text-2xl font-bold mb-6">What's Included</h3>
            <ul class="space-y-3">
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Complete removal of old unit</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Crane service & rigging</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Curb adapter if needed</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Electrical & gas connections</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Control system integration</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>Startup & commissioning</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>10-year parts warranty</span>
              </li>
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-400 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                <span>2-year labor warranty</span>
              </li>
            </ul>

            <div class="mt-8 pt-8 border-t border-gray-700">
              <p class="text-sm text-gray-400 mb-4">Authorized Dealer For:</p>
              <div class="grid grid-cols-3 gap-3">
                {brands.map(brand => (
                  <div class="text-center text-sm font-semibold">{brand}</div>
                ))}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Case Study / Success Story -->
  <section class="section-full bg-primary-600 text-white">
    <div class="site-container section-padding">
      <div class="max-w-4xl mx-auto text-center">
        <Badge variant="secondary" class="mb-4 bg-white text-primary-600">Success Story</Badge>
        <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold mb-6">
          Recent RTU Replacement Project
        </h2>
        
        <div class="bg-white/10 backdrop-blur-sm rounded-2xl p-8 mb-8">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-6">
            <div>
              <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl font-bold">$28K</div>
              <div class="text-sm">Project Value</div>
            </div>
            <div>
              <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl font-bold">2 Days</div>
              <div class="text-sm">Installation Time</div>
            </div>
            <div>
              <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl font-bold">30%</div>
              <div class="text-sm">Energy Savings</div>
            </div>
          </div>
          <p class="text-lg mb-4">
            "Jupitair replaced our 10-ton RTU at our restaurant over the weekend. No disruption to business, fair pricing, and our kitchen stays cool even during the dinner rush now."
          </p>
          <p class="text-sm">
            ‚Äî Restaurant Owner, Frisco TX
          </p>
        </div>

        <Button href="/commercial" variant="secondary" size="lg" class="bg-white text-primary-600 hover:bg-gray-100">
          View More Projects
        </Button>
      </div>
    </div>
  </section>

  <!-- Reviews -->
  <ReviewsSection 
    limit={6}
    variant="grid"
    showCta={false}
  />

  <!-- Final CTA -->
  <section class="section-full bg-gray-900 text-white">
    <div class="site-container section-padding">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold mb-4">
          Need RTU Replacement? We're Ready
        </h2>
        <p class="text-lg sm:text-xl mb-8 text-gray-300">
          Free rooftop assessment ‚Ä¢ Competitive quotes ‚Ä¢ Fast installation
        </p>
        
        <div class="bg-gray-800 rounded-2xl p-8 mb-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div>
              <h3 class="font-bold text-lg mb-3">Emergency RTU Failure?</h3>
              <Button href="tel:(940) 390-5676" variant="emergency" size="lg" class="w-full bg-emergency-600 hover:bg-emergency-700">
                Emergency: (940) 390-5676
              </Button>
              <p class="text-sm text-gray-400 mt-2">Same-day crane service available</p>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-3">Plan Your Replacement:</h3>
              <Button href="/contact" variant="secondary" size="lg" class="w-full">
                Get Free Assessment
              </Button>
              <p class="text-sm text-gray-400 mt-2">Schedule at your convenience</p>
            </div>
          </div>
        </div>
        
        <p class="text-sm text-gray-400">
          Serving all of DFW ‚Ä¢ Licensed & Insured ‚Ä¢ TACLA Licensed
        </p>
      </div>
    </div>
  </section>
</BaseLayout>