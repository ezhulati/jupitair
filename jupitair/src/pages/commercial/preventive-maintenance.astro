---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PremiumHero from '../../components/layout/PremiumHero.astro';

import PremiumCard from '../../components/ui/PremiumCard.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import Icon from '../../components/ui/Icon.astro';
import ReviewsSection from '../../components/reviews/ReviewsSection.astro';
import DynamicSchema from '../../components/seo/DynamicSchema.astro';

const maintenancePlans = [
  {
    name: 'Essential',
    price: '$149',
    unit: '/month',
    frequency: 'Quarterly Visits',
    description: 'Perfect for small businesses with basic HVAC needs',
    features: [
      '4 comprehensive inspections per year',
      'Filter replacement included',
      'Coil cleaning',
      'Belt inspection and adjustment',
      'Electrical connection check',
      'Refrigerant level check',
      '10% discount on repairs',
      'Priority scheduling'
    ],
    best: false,
    color: 'blue'
  },
  {
    name: 'Professional',
    price: '$299',
    unit: '/month',
    frequency: 'Monthly Visits',
    description: 'Ideal for restaurants, retail, and offices with critical HVAC needs',
    features: [
      '12 comprehensive inspections per year',
      'All Essential features included',
      'Belts and filters included',
      'Detailed performance reporting',
      'Energy efficiency analysis',
      'After-hours emergency response',
      '15% discount on repairs',
      'Dedicated account manager',
      'Quarterly IAQ testing',
      'Predictive maintenance alerts'
    ],
    best: true,
    color: 'purple'
  },
  {
    name: 'Enterprise',
    price: 'Custom',
    unit: 'Pricing',
    frequency: 'Custom Schedule',
    description: 'Tailored solutions for large facilities and multi-location businesses',
    features: [
      'Unlimited service visits',
      'All Professional features included',
      'All parts and labor included',
      'Building automation integration',
      'Real-time monitoring',
      'Guaranteed uptime SLA',
      '20% discount on new equipment',
      'Quarterly executive reporting',
      'Energy optimization consulting',
      'Multi-location management'
    ],
    best: false,
    color: 'green'
  }
];

const benefits = [
  {
    icon: 'shield',
    title: 'Reduce Breakdowns by 75%',
    description: 'Catch problems before they cause failures with regular inspections and maintenance'
  },
  {
    icon: 'money',
    title: 'Save 30% on Energy Costs',
    description: 'Keep your systems running at peak efficiency to minimize energy consumption'
  },
  {
    icon: 'clock',
    title: 'Extend Equipment Life 40%',
    description: 'Proper maintenance significantly extends the lifespan of your HVAC equipment'
  },
  {
    icon: 'chart',
    title: 'Predictable Budgeting',
    description: 'Fixed monthly costs make it easy to budget for HVAC maintenance and repairs'
  }
];

const includedServices = [
  'Comprehensive system inspection',
  'Filter replacement',
  'Coil cleaning',
  'Belt tension adjustment',
  'Lubrication of moving parts',
  'Thermostat calibration',
  'Electrical connection tightening',
  'Refrigerant level check',
  'Condensate drain cleaning',
  'Safety control testing',
  'Operating pressure check',
  'Temperature differential test',
  'Airflow measurement',
  'Energy efficiency analysis',
  'Detailed service reports',
  'Maintenance log tracking'
];

const faqs = [
  {
    question: 'Why is preventive maintenance important?',
    answer: 'Preventive maintenance reduces unexpected breakdowns by up to 75%, extends equipment life by 40%, and can save 30% on energy costs. It also ensures better indoor air quality and maintains comfortable temperatures for employees and customers.'
  },
  {
    question: 'How often should commercial HVAC be serviced?',
    answer: 'Most commercial HVAC systems should be serviced quarterly at minimum. High-use systems like those in restaurants or medical facilities benefit from monthly maintenance. The frequency depends on usage, environment, and system age.'
  },
  {
    question: 'What happens during a maintenance visit?',
    answer: 'Our technicians perform a comprehensive inspection, clean coils and filters, check refrigerant levels, test electrical connections, lubricate moving parts, calibrate thermostats, and provide a detailed report with recommendations.'
  },
  {
    question: 'Can I cancel my maintenance plan anytime?',
    answer: 'Yes, our maintenance plans are month-to-month with no long-term contracts required. You can cancel or modify your plan with 30 days notice.'
  }
];
---

<BaseLayout 
  title="Commercial HVAC Preventive Maintenance Plans | Jupitair HVAC"
  description="Reduce breakdowns by 75% with professional commercial HVAC maintenance plans. Monthly service starting at $149. No contracts required. North Texas businesses trust Jupitair."
  keywords="commercial HVAC maintenance, preventive maintenance plans, commercial AC service, RTU maintenance, North Texas"

  overlayHeader={true}>
  <!-- Schema Markup -->
  <DynamicSchema 
    type="Service"
    data={{
      name: "Commercial HVAC Preventive Maintenance",
      description: "Professional preventive maintenance plans for commercial HVAC systems",
      provider: {
        "@type": "HVACBusiness",
        name: "Jupitair HVAC"
      },
      areaServed: "North Texas",
      priceRange: "$149-$500+ per month"
    }}
  />

  <!-- Premium Hero Section -->
  <PremiumHero 
    title="Commercial HVAC<br>Preventive Maintenance"
    subtitle="Reduce Breakdowns by 75% • Save 30% on Energy"
    description="Keep your business comfortable and your HVAC costs predictable with our comprehensive maintenance plans. No contracts, month-to-month service."
    ctaPrimary={{ text: "Call (940) 390-5676", href: "tel:9403905676" }}
    ctaSecondary={{ text: "Get Custom Quote", href: "/contact" }}
    variant="gradient"
    height="lg" class="hero-section"
  />

  <!-- Trust Bar -->
  <section class="bg-gradient-to-r from-gray-900 to-gray-800 py-6 sm:py-8">
    <div class="site-container section-padding">
      <div class="flex flex-wrap justify-center items-center gap-6 text-sm">
        <div class="flex items-center gap-2 text-white">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>500+ Businesses Served</span>
        </div>
        <div class="flex items-center gap-2 text-white">
          <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span>5.0 Star Rating</span>
        </div>
        <div class="flex items-center gap-2 text-white">
          <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>No Contracts Required</span>
        </div>
        <div class="flex items-center gap-2 text-white">
          <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
          <span>24/7 Priority Response</span>
        </div>
      </div>
    </div>
  </section>

  <div class="site-container section-padding pt-16 pb-20 sm:pt-20 sm:pb-24 lg:pt-24 lg:pb-28">
    
    <!-- Benefits Section -->
    <section class="mb-20">
      <div class="text-center mb-12">
        <Badge variant="primary" class="mb-4">Benefits</Badge>
        <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl md:text-5xl font-bold text-white mb-4">
          Why Preventive Maintenance Matters
        </h2>
        <p class="text-lg sm:text-xl text-gray-200 max-w-3xl mx-auto">
          Protect your investment and avoid costly emergency repairs with regular professional maintenance
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {benefits.map(benefit => (
          <Card variant="outline"  class="border-gray-200 bg-white">
            <div class="text-center">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                  {benefit.icon === 'shield' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  ) : benefit.icon === 'money' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  ) : benefit.icon === 'clock' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  ) : (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  )}
                </svg>
              </div>
              <h3 class="text-lg sm:text-xl font-bold text-white mb-2">{benefit.title}</h3>
              <p class="text-gray-200">{benefit.description}</p>
            </div>
          </Card>
        ))}
      </div>
    </section>

    <!-- Pricing Plans -->
    <section class="mb-20">
      <div class="text-center mb-12">
        <Badge variant="secondary" class="mb-4">Pricing Plans</Badge>
        <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl md:text-5xl font-bold text-white mb-4">
          Choose Your Maintenance Plan
        </h2>
        <p class="text-lg sm:text-xl text-gray-200 max-w-3xl mx-auto">
          Flexible month-to-month plans with no long-term contracts. Upgrade or downgrade anytime.
        </p>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {maintenancePlans.map(plan => (
          <PremiumCard class="overflow-visible"  
            variant={plan.best ? "elevated" : "default"} 
            padding="none" 
            hover={true}
            class={plan.best ? "ring-2 ring-purple-500 relative" : ""}
          >
            {plan.best && (
              <div class="absolute -top-3 left-1/2 transform -translate-x-1/2 z-10">
                <Badge variant="primary" class="bg-purple-600">Most Popular</Badge>
              </div>
            )}
            
            <div class={`p-8 text-center border-b ${plan.best ? 'bg-gradient-to-br from-purple-50 to-white' : ''}`}>
              <h3 class="text-lg sm:text-xl sm:text-2xl font-bold text-white mb-2">{plan.name}</h3>
              <p class="text-gray-200 mb-4">{plan.description}</p>
              <div class="flex items-end justify-center gap-1 mb-2">
                <span class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-white">{plan.price}</span>
                <span class="text-gray-200 text-lg mb-1">{plan.unit}</span>
              </div>
              <p class="text-sm text-gray-200">{plan.frequency}</p>
            </div>
            
            <div class="p-8">
              <ul class="space-y-3 mb-8">
                {plan.features.map(feature => (
                  <li class="flex items-start gap-3">
                    <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    <span class="text-gray-700">{feature}</span>
                  </li>
                ))}
              </ul>
              
              <Button 
                href="/contact" 
                variant={plan.best ? "premium" : "secondary"}
                size="lg"
                class="w-full justify-center"
              >
                Get Started
              </PremiumButton>
            </div>
          </Card>
        ))}
      </div>
    </section>

    <!-- What's Included -->
    <section class="mb-20 w-full bg-gradient-to-br from-gray-50 to-white rounded-3xl">
      <div class="px-8">
        <div class="text-center mb-12">
          <Badge variant="secondary" class="mb-4">What's Included</Badge>
          <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">
            Comprehensive Maintenance Services
          </h2>
          <p class="text-lg sm:text-xl text-gray-200 max-w-3xl mx-auto">
            Every maintenance visit includes these essential services to keep your system running perfectly
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 max-w-6xl mx-auto">
          {includedServices.map(service => (
            <div class="flex items-center gap-3 bg-white p-4 rounded-lg shadow-sm">
              <svg class="w-5 h-5 text-white flex-shrink-0" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <span class="text-gray-700">{service}</span>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- How It Works -->
    <section class="mb-20">
      <div class="text-center mb-12">
        <Badge variant="primary" class="mb-4">How It Works</Badge>
        <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-white mb-4">
          Getting Started is Easy
        </h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-lg sm:text-xl sm:text-2xl font-bold">
            1
          </div>
          <h3 class="font-bold text-white mb-2">Choose Your Plan</h3>
          <p class="text-gray-200">Select the maintenance plan that fits your business needs</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-lg sm:text-xl sm:text-2xl font-bold">
            2
          </div>
          <h3 class="font-bold text-white mb-2">System Assessment</h3>
          <p class="text-gray-200">We perform a complete evaluation of your HVAC equipment</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-lg sm:text-xl sm:text-2xl font-bold">
            3
          </div>
          <h3 class="font-bold text-white mb-2">Get Quote</h3>
          <p class="text-gray-200">Set up regular maintenance visits at convenient times</p>
        </div>
        <div class="text-center">
          <div class="w-16 h-16 bg-primary-100 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-lg sm:text-xl sm:text-2xl font-bold">
            4
          </div>
          <h3 class="font-bold text-white mb-2">Enjoy Peace of Mind</h3>
          <p class="text-gray-200">Relax knowing your HVAC system is professionally maintained</p>
        </div>
      </div>
    </section>

    <!-- FAQs -->
    <section class="mb-20">
      <Card variant="outline"  class="border-gray-200 bg-white">
        <div class="max-w-3xl mx-auto">
          <div class="text-center mb-12">
            <Badge variant="secondary" class="mb-4">FAQs</Badge>
            <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-white">
              Frequently Asked Questions
            </h2>
          </div>
          
          <div class="space-y-6">
            {faqs.map((faq, index) => (
              <div class="pb-6 border-b border-gray-200 last:border-0">
                <h3 class="text-lg font-bold text-white mb-3 flex items-start gap-3">
                  <span class="text-white">Q{index + 1}.</span>
                  {faq.question}
                </h3>
                <p class="text-gray-200 pl-8">{faq.answer}</p>
              </div>
            ))}
          </div>
        </div>
      </Card>
    </section>

    <!-- Customer Success Stats -->
    <section class="mb-20 w-full bg-gradient-to-r from-blue-600 to-blue-700 rounded-3xl text-white">
      <div class="text-center mb-12">
        <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold mb-4">
          Trusted by North Texas Businesses
        </h2>
        <p class="text-lg sm:text-xl text-blue-100">
          Our maintenance plans deliver real results
        </p>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl md:text-5xl font-bold mb-2">500+</div>
          <div class="text-blue-200">Active Contracts</div>
        </div>
        <div class="text-center">
          <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl md:text-5xl font-bold mb-2">75%</div>
          <div class="text-blue-200">Fewer Breakdowns</div>
        </div>
        <div class="text-center">
          <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl md:text-5xl font-bold mb-2">30%</div>
          <div class="text-blue-200">Energy Savings</div>
        </div>
        <div class="text-center">
          <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl md:text-5xl font-bold mb-2">98%</div>
          <div class="text-blue-200">Customer Retention</div>
        </div>
      </div>
    </section>

    <!-- Reviews -->
    <ReviewsSection 
      limit={6}
      variant="grid"
      title="What Businesses Say About Our Maintenance Plans"
    />

    <!-- CTA Section -->
    <section class="relative w-full bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 rounded-3xl overflow-hidden text-white text-center">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-white rounded-full"></div>
        <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-white rounded-full"></div>
      </div>
      
      <div class="relative z-10 max-w-4xl mx-auto px-8">
        <Badge variant="light" class="mb-4 bg-white text-primary-700 font-semibold border-white/30">
          Get Started Today
        </Badge>
        <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl md:text-5xl font-bold mb-4">
          Ready to Reduce Your HVAC Costs?
        </h2>
        <p class="text-lg sm:text-xl md:text-lg sm:text-xl sm:text-2xl text-gray-300 mb-8">
          Join 500+ North Texas businesses that trust Jupitair for their preventive maintenance
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <Button 
            href="tel:9403905676" 
            variant="premium"
            size="xl"
            class="bg-white text-white hover:bg-gray-100 shadow-2xl min-w-[250px]"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            Call (940) 390-5676
          </PremiumButton>
          <Button 
            href="/contact" 
            variant="elevated"
            size="xl"
            class="border-2 border-white text-white hover:bg-white hover:text-white min-w-[250px]"
          >
            Get Custom Quote
          </PremiumButton>
        </div>
        
        <p class="text-sm text-gray-400">
          No contracts required • Cancel anytime • 100% satisfaction guarantee
        </p>
      </div>
    </section>
  </div>
</BaseLayout>