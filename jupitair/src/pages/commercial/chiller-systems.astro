---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PremiumHero from '../../components/layout/PremiumHero.astro';
import PremiumCard from '../../components/ui/PremiumCard.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import ReviewsSection from '../../components/reviews/ReviewsSection.astro';

const chillerTypes = [
  {
    type: 'Air-Cooled Chillers',
    range: '$100K - $500K',
    capacity: '50 - 500 tons',
    applications: 'Office buildings, hotels, hospitals',
    benefits: 'Lower installation cost, no cooling tower needed'
  },
  {
    type: 'Water-Cooled Chillers',
    range: '$200K - $1M+',
    capacity: '100 - 2000+ tons',
    applications: 'Large commercial, data centers, industrial',
    benefits: 'Higher efficiency, better for 24/7 operations'
  },
  {
    type: 'Modular Chillers',
    range: '$150K - $750K',
    capacity: '60 - 600 tons',
    applications: 'Expandable facilities, phased construction',
    benefits: 'Scalable capacity, redundancy built-in'
  },
  {
    type: 'Magnetic Bearing Chillers',
    range: '$300K - $1.5M',
    capacity: '200 - 1500 tons',
    applications: 'High-efficiency requirements, LEED projects',
    benefits: 'Ultra-efficient, oil-free, quiet operation'
  }
];

const services = [
  { icon: 'üîß', title: 'Installation', desc: 'Complete system design & installation' },
  { icon: 'üîÑ', title: 'Replacement', desc: 'Retrofit & modernization projects' },
  { icon: 'üõ†Ô∏è', title: 'Repair', desc: '24/7 emergency chiller repair' },
  { icon: 'üìä', title: 'Optimization', desc: 'Performance tuning & controls' },
  { icon: 'üî¨', title: 'Testing', desc: 'Vibration analysis & diagnostics' },
  { icon: 'üìã', title: 'Maintenance', desc: 'Preventive maintenance programs' }
];

const expertise = [
  'Centrifugal Chillers',
  'Screw Chillers',
  'Scroll Chillers',
  'Absorption Chillers',
  'Heat Recovery Chillers',
  'VFD Retrofits'
];

const metrics = [
  { value: '200+', label: 'Chillers Serviced' },
  { value: '50,000', label: 'Total Tonnage' },
  { value: '24/7', label: 'Emergency Service' },
  { value: '15+', label: 'Years Experience' }
];

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Commercial Chiller Systems",
  "provider": {
    "@type": "HVACBusiness",
    "name": "Jupitair HVAC"
  },
  "areaServed": "Dallas-Fort Worth Metroplex",
  "description": "Commercial chiller installation, replacement, and service from $100K to $1M+",
  "offers": {
