      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="break-words text-3xl md:text-4xl font-bold text-gray-900 mb-4">
            Complete Chiller Services
          </h2>
          <p class="break-words text-xl text-gray-600">
            From installation to optimization, we handle it all
          </p>
        </div>

        <div class="min-w-0 grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {services.map(service => (
            <Card variant="elevated" padding="lg" class="text-center hover:shadow-xl transition-shadow">
              <div class="break-words text-4xl mb-3">{service.icon}</div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">{service.title}</h3>
              <p class="text-sm text-gray-600">{service.desc}</p>
            </Card>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Why Choose Jupitair -->
  <section class="py-16 bg-white">
    <div class="max-w-7xl overflow-x-hidden container mx-auto px-4">
      <div class="max-w-6xl mx-auto">
        <div class="min-w-0 grid lg:grid-cols-2 gap-12 items-center">
          <div>
            <Badge variant="primary" class="mb-4">Why Jupitair</Badge>
            <h2 class="break-words text-3xl md:text-4xl font-bold text-gray-900 mb-6">
