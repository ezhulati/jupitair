                <li>‚Ä¢ ASHRAE Certified</li>
                <li>‚Ä¢ Factory Authorized Service</li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Energy Savings CTA -->
  <section class="py-16 bg-gradient-to-r from-primary-600 to-primary-700 text-white">
    <div class="max-w-7xl overflow-x-hidden container mx-auto px-4">
