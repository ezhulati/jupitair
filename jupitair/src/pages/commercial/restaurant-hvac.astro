const processSteps = [
  {
    number: '1',
    title: 'Site Assessment',
    description: 'Evaluate your kitchen layout, equipment, and current HVAC systems'
  },
  {
    number: '2',
    title: 'Custom Design',
    description: 'Engineer solutions specific to your restaurant\'s needs and budget'
  },
  {
    number: '3',
