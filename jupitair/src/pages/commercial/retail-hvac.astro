---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PremiumHero from '../../components/layout/PremiumHero.astro';
import PremiumButton from '../../components/ui/PremiumButton.astro';
import PremiumCard from '../../components/ui/PremiumCard.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import Icon from '../../components/ui/Icon.astro';
import ReviewsSection from '../../components/reviews/ReviewsSection.astro';
import DynamicSchema from '../../components/seo/DynamicSchema.astro';

const retailServices = [
  {
    name: 'Rooftop Unit Service',
    description: 'Complete RTU maintenance, repair, and replacement for retail spaces with minimal disruption to business',
    price: '$3,000',
    range: '$3K-$15K',
    features: [
      'Same-day emergency repair',
      'Energy-efficient upgrades',
      'Smart thermostat integration',
      'Preventive maintenance plans',
      'Weekend service available'
    ],
    icon: 'rtu'
  },
  {
    name: 'Zone Control Systems',
    description: 'Multi-zone climate control for different retail areas - stockrooms, sales floors, and offices',
    price: '$5,000',
    range: '$5K-$12K',
    features: [
      'Independent zone control',
      'Smart scheduling',
      'Energy optimization',
      'Mobile app control',
      'Occupancy sensors'
    ],
    icon: 'zone'
  },
  {
    name: 'Indoor Air Quality',
    description: 'Advanced filtration and purification systems to create a healthy shopping environment',
    price: '$2,500',
    range: '$2.5K-$8K',
    features: [
      'HEPA filtration',
      'UV-C purification',
      'Humidity control',
      'CO2 monitoring',
      'Odor elimination'
    ],
    icon: 'air'
  },
  {
    name: 'Energy Management',
    description: 'Smart HVAC controls and monitoring to reduce energy costs by up to 30%',
    price: '$1,500',
    range: '$1.5K-$5K',
    features: [
      'Real-time monitoring',
      'Automated scheduling',
      'Demand response',
      'Energy reports',
      'Remote management'
    ],
    icon: 'energy'
  },
  {
    name: 'Emergency Service',
    description: '24/7 emergency response to keep your store comfortable and operational',
    price: '$500',
    range: 'From $500',
    features: [
      '2-hour response',
      'Temporary cooling/heating',
      'Priority scheduling',
      'After-hours service',
      'Holiday availability'
    ],
    icon: 'emergency'
  },
  {
    name: 'Preventive Maintenance',
    description: 'Customized maintenance programs to prevent breakdowns and extend equipment life',
    price: '$249',
    range: '$249-$799/month',
    features: [
      'Monthly inspections',
      'Filter replacement',
      'Coil cleaning',
      'Performance optimization',
      'Detailed reporting'
    ],
    icon: 'maintenance'
  }
];

const benefits = [
  {
    icon: 'money',
    title: 'Reduce Energy Costs 30%',
    description: 'Smart controls and efficient equipment lower your utility bills'
  },
  {
    icon: 'clock',
    title: 'Minimize Downtime',
    description: '24/7 emergency service and preventive maintenance keep you operational'
  },
  {
    icon: 'shield',
    title: 'Protect Inventory',
    description: 'Consistent temperature and humidity control safeguards merchandise'
  },
  {
    icon: 'chart',
    title: 'Increase Sales',
    description: 'Comfortable shopping environment encourages customers to stay longer'
  }
];

const retailTypes = [
  {
    type: 'Clothing Stores',
    challenges: 'Humidity control for fabric preservation, fitting room comfort',
    solution: 'Dehumidification systems with zone control'
  },
  {
    type: 'Electronics Stores',
    challenges: 'Static control, equipment heat load, demonstration area cooling',
    solution: 'Precision cooling with humidity management'
  },
  {
    type: 'Grocery Stores',
    challenges: 'Refrigeration heat rejection, produce section humidity',
    solution: 'Integrated HVAC and refrigeration systems'
  },
  {
    type: 'Big Box Stores',
    challenges: 'Large space conditioning, loading dock infiltration',
    solution: 'High-capacity RTUs with air curtains'
  }
];

const processSteps = [
  {
    number: '1',
    title: 'Free Assessment',
    description: 'Evaluate your current HVAC system and identify opportunities'
  },
  {
    number: '2',
    title: 'Custom Proposal',
    description: 'Tailored solutions based on your store size and needs'
  },
  {
    number: '3',
    title: 'Professional Installation',
    description: 'Expert installation with minimal disruption to business'
  },
  {
    number: '4',
    title: 'Ongoing Support',
    description: 'Maintenance programs and 24/7 emergency service'
  }
];

const faqs = [
  {
    question: 'How much does retail HVAC cost?',
    answer: 'Retail HVAC systems typically range from $10,000 to $30,000 for a complete installation, depending on store size and equipment needs. Rooftop units average $3,000-$15,000, while zone control systems range from $5,000-$12,000.'
  },
  {
    question: 'What size HVAC system do I need for my retail space?',
    answer: 'Retail spaces typically require 1 ton of cooling for every 250-300 square feet. However, factors like ceiling height, window area, lighting, and foot traffic affect sizing. We perform a detailed load calculation for accurate sizing.'
  },
  {
    question: 'How can I reduce HVAC costs in my retail store?',
    answer: 'Install programmable thermostats, maintain regular filter changes, use zone control for different areas, upgrade to energy-efficient equipment, and implement a preventive maintenance program. These measures can reduce costs by 20-30%.'
  },
  {
    question: 'How often should retail HVAC be serviced?',
    answer: 'Retail HVAC systems should be serviced quarterly at minimum, with monthly filter changes during peak seasons. High-traffic stores benefit from monthly maintenance to ensure optimal performance and air quality.'
  }
];
---

<BaseLayout 
  title="Retail HVAC Services | Store Climate Control | Jupitair HVAC"
  description="Professional retail HVAC services in North Texas. Rooftop units, zone control, and energy management for stores. 24/7 service. Call (940) 390-5676."
  keywords="retail HVAC, store air conditioning, retail climate control, rooftop units, commercial HVAC retail, North Texas"
>
  <!-- Schema Markup -->
  <DynamicSchema 
    type="Service"
    data={{
      name: "Retail HVAC Services",
      description: "Complete HVAC solutions for retail stores including climate control and energy management",
      provider: {
        "@type": "HVACBusiness",
        name: "Jupitair HVAC"
      },
      areaServed: "North Texas",
      priceRange: "$3,000-$30,000"
    }}
  />

  <!-- Premium Hero Section -->
  <PremiumHero 
    title="Retail HVAC Services"
    subtitle="Keep Customers Comfortable • Protect Inventory • Save Energy"
    description="Professional HVAC solutions designed for retail environments. From boutiques to big box stores, we keep your customers comfortable and your energy costs low."
    ctaPrimary={{ text: "Call (940) 390-5676", href: "tel:9403905676" }}
    ctaSecondary={{ text: "Get Free Assessment", href: "/contact" }}
    variant="gradient"
    height="lg"
  />

  <!-- Trust Bar -->
  <section class="bg-gradient-to-r from-gray-900 to-gray-800 py-4">
    <div class="max-w-7xl overflow-x-hidden container mx-auto px-4">
      <div class="min-w-0 flex flex-wrap justify-center items-center gap-6 text-sm">
        <div class="min-w-0 flex items-center gap-2 text-white">
          <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          <span>300+ Retail Clients</span>
        </div>
        <div class="min-w-0 flex items-center gap-2 text-white">
          <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
          </svg>
          <span>5.0 Star Rating</span>
        </div>
        <div class="min-w-0 flex items-center gap-2 text-white">
          <svg class="w-5 h-5 text-blue-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z" clip-rule="evenodd"/>
          </svg>
          <span>30% Energy Savings</span>
        </div>
        <div class="min-w-0 flex items-center gap-2 text-white">
          <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
          </svg>
          <span>24/7 Emergency Service</span>
        </div>
      </div>
    </div>
  </section>

  <div class="max-w-7xl overflow-x-hidden container mx-auto px-4 py-16">
    
    <!-- Services Section -->
    <section class="mb-20">
      <div class="text-center mb-12">
        <Badge variant="primary" class="mb-4">Our Services</Badge>
        <h2 class="break-words text-4xl md:text-5xl font-bold text-white mb-4">
          Complete Retail HVAC Solutions
        </h2>
        <p class="break-words text-xl text-gray-200 max-w-3xl mx-auto">
          From boutiques to department stores, we provide HVAC services that keep customers comfortable and energy costs manageable
        </p>
      </div>
      
      <div class="min-w-0 grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {retailServices.map(service => (
          <PremiumCard variant="elevated" padding="lg" hover={true}>
            <div class="mb-4">
              <div class="min-w-0 w-14 h-14 bg-gradient-to-br from-purple-500 to-purple-600 rounded-xl flex items-center justify-center mb-4">
                <svg class="w-7 h-7 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {service.icon === 'rtu' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
                  ) : service.icon === 'zone' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z"/>
                  ) : service.icon === 'air' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"/>
                  ) : service.icon === 'energy' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"/>
                  ) : service.icon === 'emergency' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/>
                  ) : (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"/>
                  )}
                </svg>
              </div>
              <h3 class="break-words text-xl font-bold text-white mb-2">{service.name}</h3>
              <p class="text-gray-200 text-sm mb-4">{service.description}</p>
              <div class="min-w-0 flex items-baseline gap-2 mb-4">
                <span class="break-words text-2xl font-bold text-purple-600">From {service.price}</span>
                <span class="text-sm text-gray-300">({service.range})</span>
              </div>
            </div>
            
            <ul class="space-y-2 mb-6">
              {service.features.map(feature => (
                <li class="min-w-0 flex items-start gap-2">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                  </svg>
                  <span class="text-sm text-gray-700">{feature}</span>
                </li>
              ))}
            </ul>
            
            <PremiumButton 
              href="/contact" 
              variant="secondary"
              size="sm"
              class="w-full justify-center"
            >
              Get Quote
            </PremiumButton>
          </PremiumCard>
        ))}
      </div>
    </section>

    <!-- Retail Types We Serve -->
    <section class="mb-20 py-16 bg-gradient-to-br from-gray-50 to-white rounded-3xl">
      <div class="px-8">
        <div class="text-center mb-12">
          <Badge variant="secondary" class="mb-4">Industries</Badge>
          <h2 class="break-words text-3xl md:text-4xl font-bold text-white mb-4">
            Retail Environments We Specialize In
          </h2>
          <p class="break-words text-xl text-gray-200 max-w-3xl mx-auto">
            Every retail space has unique HVAC challenges. We have solutions for them all.
          </p>
        </div>
        
        <div class="min-w-0 grid md:grid-cols-2 gap-8 max-w-5xl mx-auto">
          {retailTypes.map(item => (
            <PremiumCard variant="elevated" padding="lg">
              <div class="min-w-0 flex items-start gap-4">
                <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 11V7a4 4 0 00-8 0v4M5 9h14l1 12H4L5 9z"/>
                  </svg>
                </div>
                <div class="min-w-0 flex-1">
                  <h3 class="font-bold text-white mb-2">{item.type}</h3>
                  <p class="text-sm text-gray-200 mb-2"><strong>Challenges:</strong> {item.challenges}</p>
                  <p class="text-sm text-gray-700"><strong>Our Solution:</strong> {item.solution}</p>
                </div>
              </div>
            </PremiumCard>
          ))}
        </div>
      </div>
    </section>

    <!-- Benefits -->
    <section class="mb-20">
      <div class="text-center mb-12">
        <Badge variant="primary" class="mb-4">Benefits</Badge>
        <h2 class="break-words text-3xl md:text-4xl font-bold text-white mb-4">
          Why Retailers Choose Jupitair
        </h2>
      </div>
      
      <div class="min-w-0 grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {benefits.map(benefit => (
          <PremiumCard variant="elevated" padding="lg" hover={true}>
            <div class="text-center">
              <div class="min-w-0 w-16 h-16 bg-gradient-to-br from-purple-500 to-purple-600 rounded-2xl flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  {benefit.icon === 'money' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  ) : benefit.icon === 'clock' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  ) : benefit.icon === 'shield' ? (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
                  ) : (
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
                  )}
                </svg>
              </div>
              <h3 class="break-words text-xl font-bold text-white mb-2">{benefit.title}</h3>
              <p class="text-gray-200">{benefit.description}</p>
            </div>
          </PremiumCard>
        ))}
      </div>
    </section>

    <!-- Process -->
    <section class="mb-20">
      <div class="text-center mb-12">
        <Badge variant="secondary" class="mb-4">Our Process</Badge>
        <h2 class="break-words text-3xl md:text-4xl font-bold text-white mb-4">
          Getting Started is Easy
        </h2>
      </div>
      
      <div class="min-w-0 grid md:grid-cols-4 gap-8">
        {processSteps.map((step, index) => (
          <div class="text-center relative">
            <div class="break-words min-w-0 w-16 h-16 bg-purple-100 text-purple-600 rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
              {step.number}
            </div>
            <h3 class="font-bold text-white mb-2">{step.title}</h3>
            <p class="text-gray-200 text-sm">{step.description}</p>
            {index < processSteps.length - 1 && (
              <div class="hidden md:block absolute top-8 left-full w-full">
                <svg class="w-8 h-8 text-gray-300 -ml-4" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M5 12h14m-7-7l7 7-7 7"/>
                </svg>
              </div>
            )}
          </div>
        ))}
      </div>
    </section>

    <!-- FAQs -->
    <section class="mb-20">
      <PremiumCard variant="elevated" padding="xl">
        <div class="max-w-3xl mx-auto">
          <div class="text-center mb-12">
            <Badge variant="secondary" class="mb-4">FAQs</Badge>
            <h2 class="break-words text-3xl md:text-4xl font-bold text-white">
              Retail HVAC Questions
            </h2>
          </div>
          
          <div class="space-y-6">
            {faqs.map((faq, index) => (
              <div class="pb-6 border-b border-gray-200 last:border-0">
                <h3 class="min-w-0 text-lg font-bold text-white mb-3 flex items-start gap-3">
                  <span class="text-purple-600">Q{index + 1}.</span>
                  {faq.question}
                </h3>
                <p class="text-gray-200 pl-8">{faq.answer}</p>
              </div>
            ))}
          </div>
        </div>
      </PremiumCard>
    </section>

    <!-- Statistics -->
    <section class="mb-20 py-16 bg-gradient-to-r from-purple-600 to-purple-700 rounded-3xl text-white">
      <div class="text-center mb-12">
        <h2 class="break-words text-3xl md:text-4xl font-bold mb-4">
          Trusted by North Texas Retailers
        </h2>
        <p class="break-words text-xl text-purple-100">
          Keeping stores comfortable and profitable since 2009
        </p>
      </div>
      
      <div class="min-w-0 grid grid-cols-2 md:grid-cols-4 gap-8">
        <div class="text-center">
          <div class="break-words text-4xl md:text-5xl font-bold mb-2">300+</div>
          <div class="text-purple-200">Retail Clients</div>
        </div>
        <div class="text-center">
          <div class="break-words text-4xl md:text-5xl font-bold mb-2">30%</div>
          <div class="text-purple-200">Energy Savings</div>
        </div>
        <div class="text-center">
          <div class="break-words text-4xl md:text-5xl font-bold mb-2">24/7</div>
          <div class="text-purple-200">Emergency Service</div>
        </div>
        <div class="text-center">
          <div class="break-words text-4xl md:text-5xl font-bold mb-2">99%</div>
          <div class="text-purple-200">Uptime Rate</div>
        </div>
      </div>
    </section>

    <!-- Reviews -->
    <ReviewsSection 
      limit={6}
      variant="grid"
      title="What Retail Managers Say About Us"
    />

    <!-- CTA Section -->
    <section class="relative py-20 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900 rounded-3xl overflow-hidden text-white text-center">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute -top-40 -right-40 w-80 h-80 bg-white rounded-full"></div>
        <div class="absolute -bottom-40 -left-40 w-80 h-80 bg-white rounded-full"></div>
      </div>
      
      <div class="relative z-10 max-w-4xl mx-auto px-8">
        <Badge variant="light" class="mb-4 bg-white/20 text-white border-white/30">
          Get Started Today
        </Badge>
        <h2 class="break-words text-4xl md:text-5xl font-bold mb-4">
          Create the Perfect Shopping Environment
        </h2>
        <p class="break-words text-xl md:text-2xl text-gray-300 mb-8">
          Professional HVAC service that keeps customers comfortable and energy costs low
        </p>
        
        <div class="min-w-0 flex flex-col sm:flex-row gap-4 justify-center mb-8">
          <PremiumButton 
            href="tel:9403905676" 
            variant="premium"
            size="xl"
            class="bg-white text-white hover:bg-gray-100 shadow-2xl min-w-[250px]"
