---
import BaseLayout from '../layouts/BaseLayout.astro';
import PremiumHero from '../components/layout/PremiumHero.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import PremiumCard from '../components/ui/PremiumCard.astro';
import Badge from '../components/ui/Badge.astro';
import Icon from '../components/ui/Icon.astro';
import ReviewsSection from '../components/reviews/ReviewsSection.astro';

const commercialServices = [
  {
    title: 'Restaurant HVAC',
    description: 'Complete HVAC solutions for restaurants. Kitchen ventilation, dining comfort, makeup air.',
    price: '$15K - $40K',
    icon: 'restaurant',
    link: '/commercial/restaurant-hvac',
    featured: true
  },
  {
    title: 'Retail & Strip Mall',
    description: 'Fast, affordable HVAC for retail stores and strip mall tenants. Weekend installation available.',
    price: '$8K - $30K',
    icon: 'shopping',
    link: '/commercial/retail-hvac',
    featured: true
  },
  {
    title: 'Small Office Buildings',
    description: 'Reliable HVAC for professional offices. Multi-zone control and energy efficiency.',
    price: '$15K - $50K',
    icon: 'office',
    link: '/commercial/office-hvac',
    featured: true
  },
  {
    title: 'RTU Replacement',
    description: 'Rooftop unit replacement for commercial buildings. 3-25 ton units.',
    price: '$10K - $45K',
    icon: 'construction',
    link: '/commercial/rtu-replacement',
    featured: false
  },
  {
    title: 'Emergency Repair',
    description: '24/7 emergency commercial HVAC repair. Fast response to minimize downtime.',
    price: 'From $500',
    icon: 'emergency',
    link: '/commercial/emergency-service',
    featured: false
  },
  {
    title: 'Preventive Maintenance',
    description: 'Keep your system running efficiently with regular maintenance.',
    price: 'From $199/month',
    icon: 'wrench',
    link: '/commercial/preventive-maintenance',
    featured: false
  }
];

const industries = [
  { name: 'Office Buildings', icon: 'office' },
  { name: 'Retail Stores', icon: 'shopping' },
  { name: 'Restaurants', icon: 'restaurant' },
  { name: 'Medical Facilities', icon: 'medical' },
  { name: 'Schools', icon: 'school' },
  { name: 'Warehouses', icon: 'warehouse' },
  { name: 'Churches', icon: 'church' },
  { name: 'Manufacturing', icon: 'factory' }
];

const trustSignals = [
  { label: 'Owner-Operated', value: 'Direct Accountability' },
  { label: 'Licensed & Insured', value: 'Full Coverage' },
  { label: 'Certified', value: 'NATE, EPA Universal' },
  { label: 'Experience', value: '15+ Years' },
  { label: 'Response Time', value: 'Same-Day Service' },
  { label: 'Local', value: 'North Texas Based' }
];

// Schema for commercial HVAC services
const commercialSchema = {
  "@context": "https://schema.org",
  "@type": "HVACBusiness",
  "name": "Jupitair Commercial HVAC",
  "description": "Professional commercial HVAC services in North Texas",
  "url": "https://jupitairhvac.com/commercial",
  "telephone": "(940) 390-5676",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "5760 Legacy Dr B3-501",
    "addressLocality": "Plano",
    "addressRegion": "TX",
    "postalCode": "75024"
  },
  "areaServed": [
    "Dallas-Fort Worth Metroplex",
    "Plano, TX",
    "Frisco, TX",
    "McKinney, TX",
    "Allen, TX",
    "Richardson, TX",
    "Carrollton, TX",
    "Lewisville, TX",
    "Addison, TX"
  ],
  "priceRange": "$$",
  "openingHours": "Mo-Fr 07:00-19:00, Sa 08:00-16:00",
  "paymentAccepted": "Cash, Check, Credit Card, Invoice",
  "currenciesAccepted": "USD",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Commercial HVAC Services",
    "itemListElement": [
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Commercial HVAC Maintenance",
          "description": "Preventive maintenance programs for commercial HVAC systems"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Commercial HVAC Installation",
          "description": "New commercial HVAC system installation and replacement"
        }
      },
      {
        "@type": "Offer",
        "itemOffered": {
          "@type": "Service",
          "name": "Commercial HVAC Repair",
          "description": "24/7 emergency commercial HVAC repair services"
        }
      }
    ]
  }
};
---

<BaseLayout 
  title="Commercial HVAC Services North Texas | Jupitair HVAC"
  description="Professional commercial HVAC services in North Texas. RTU repair, preventive maintenance, emergency service. Licensed, insured, and bonded. Call (940) 390-5676."
  keywords="commercial HVAC, commercial air conditioning, RTU repair, commercial heating, preventive maintenance, North Texas commercial HVAC"
  canonical="https://jupitairhvac.com/commercial"
>
  <script type="application/ld+json" set:html={JSON.stringify(commercialSchema)} />

  <!-- Premium Hero Section -->
  <PremiumHero 
    title="Commercial HVAC for North Texas Businesses"
    subtitle="Restaurants • Retail • Offices"
    description="Professional commercial HVAC service for small to medium businesses. Fast installation, reliable service, fair pricing. Owner-operated with 15+ years experience."
    ctaPrimary={{ text: "Call (940) 390-5676", href: "tel:9403905676" }}
    ctaSecondary={{ text: "Get Free Quote", href: "/commercial/quote" }}
    variant="gradient"
    height="lg" class="hero-section"
  />
  
  <!-- Trust Signals Bar -->
  <section class="bg-gray-900 border-b border-gray-800">
    <div class="site-container section-padding py-4">
      <div class="flex flex-wrap items-center justify-center gap-4 md:gap-8 text-sm">
        {trustSignals.map(signal => (
          <div class="flex items-center gap-2 text-gray-300">
            <svg class="w-5 h-5 mr-2 text-primary-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M6.267 3.455a3.066 3.066 0 001.745-.723 3.066 3.066 0 013.976 0 3.066 3.066 0 001.745.723 3.066 3.066 0 012.812 2.812c.051.643.304 1.254.723 1.745a3.066 3.066 0 010 3.976 3.066 3.066 0 00-.723 1.745 3.066 3.066 0 01-2.812 2.812 3.066 3.066 0 00-1.745.723 3.066 3.066 0 01-3.976 0 3.066 3.066 0 00-1.745-.723 3.066 3.066 0 01-2.812-2.812 3.066 3.066 0 00-.723-1.745 3.066 3.066 0 010-3.976 3.066 3.066 0 00.723-1.745 3.066 3.066 0 012.812-2.812zm7.44 5.252a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span><strong>{signal.label}:</strong> {signal.value}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Commercial Clients Choose Us -->
  <section class="section-full bg-white">
    <div class="site-container section-padding">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Why North Texas Businesses Choose Jupitair
          </h2>
          <p class="text-lg sm:text-xl text-gray-700">
            We understand that commercial HVAC is about more than comfort—it's about your bottom line.
          </p>
        </div>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <Card variant="elevated" padding="lg">
            <div class="mb-4 text-primary-600">
              <Icon name="lightning" size="xl" />
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-3">Fast Response</h3>
            <p class="text-gray-700 mb-4">
              Owner-operated means direct communication and faster service when you need it.
            </p>
            <ul class="space-y-2 text-sm text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Same-day service available
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Weekend installations
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Direct owner contact
              </li>
            </ul>
          </Card>
          
          <Card variant="elevated" padding="lg">
            <div class="mb-4 text-primary-600">
              <Icon name="money" size="xl" />
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-3">Control Costs</h3>
            <p class="text-gray-700 mb-4">
              Predictable maintenance budgets and energy-saving solutions that reduce operating costs.
            </p>
            <ul class="space-y-2 text-sm text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Flat-rate pricing options
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Energy audits included
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Warranty protection
              </li>
            </ul>
          </Card>
          
          <Card variant="elevated" padding="lg">
            <div class="mb-4 text-primary-600">
              <Icon name="trophy" size="xl" />
            </div>
            <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-3">Personal Service</h3>
            <p class="text-gray-700 mb-4">
              Deal directly with the owner who has 15+ years of commercial HVAC experience.
            </p>
            <ul class="space-y-2 text-sm text-gray-700">
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Owner on every job
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Quality guaranteed
              </li>
              <li class="flex items-start">
                <svg class="w-5 h-5 mr-2 text-green-500 mr-2 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                </svg>
                Fair, honest pricing
              </li>
            </ul>
          </Card>
        </div>
      </div>
    </div>
  </section>

  <!-- Big-Dollar Commercial Services -->
  <section class="section-spacing bg-gray-50">
    <div class="site-container section-padding">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <Badge variant="primary" class="mb-4">Our Services</Badge>
          <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Commercial HVAC Services We Specialize In
          </h2>
          <p class="text-lg sm:text-xl text-gray-700">
            Fast, reliable HVAC solutions for restaurants, retail, and offices
          </p>
        </div>
        
        <!-- Featured Big-Dollar Services -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8 mb-12">
          {commercialServices.filter(s => s.featured).map(service => (
            <PremiumCard variant="elevated" padding="lg" class="hover:shadow-2xl transition-all duration-300">
              <div class="mb-4 text-primary-600">
                <Icon name={service.icon} size="2xl" />
              </div>
              <h3 class="text-lg sm:text-xl font-bold text-gray-900 mb-2">{service.title}</h3>
              <div class="text-lg sm:text-xl sm:text-2xl font-bold text-primary-600 mb-4">{service.price}</div>
              <p class="text-gray-700 mb-6">{service.description}</p>
              <Button href={service.link} variant="primary" size="md" class="w-full">
                Learn More →
              </Button>
            </PremiumCard>
          ))}
        </div>
        
        <!-- Other Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          {commercialServices.filter(s => !s.featured).map(service => (
            <Card variant="elevated" padding="lg">
              <div class="flex items-start justify-between mb-3">
                <div class="text-primary-600">
                  <Icon name={service.icon} size="lg" />
                </div>
                <span class="text-sm font-semibold text-primary-600">{service.price}</span>
              </div>
              <h3 class="text-lg font-bold text-gray-900 mb-2">{service.title}</h3>
              <p class="text-sm text-gray-700 mb-4">{service.description}</p>
              <Button href={service.link} variant="outline" size="sm">
                Learn More →
              </Button>
            </Card>
          ))}
        </div>
      </div>
    </div>
  </section>


  <!-- Industries We Serve -->
  <section class="section-full bg-white">
    <div class="site-container section-padding">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-12">
          <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
            Industries We Serve
          </h2>
          <p class="text-lg sm:text-xl text-gray-700">
            Specialized HVAC solutions for every commercial sector.
          </p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          {industries.map(industry => (
            <div class="text-center p-6 rounded-xl bg-gray-50 hover:bg-primary-50 transition-colors duration-300 cursor-pointer">
              <div class="mb-3 text-primary-600">
                <Icon name={industry.icon} size="xl" />
              </div>
              <div class="font-semibold text-gray-900">{industry.name}</div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- Preventive Maintenance CTA -->
  <section class="section-full bg-gradient-to-r from-primary-600 to-primary-700 text-white">
    <div class="site-container section-padding">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold mb-4">
          Protect Your Investment with Preventive Maintenance
        </h2>
        <p class="text-lg sm:text-xl mb-8 text-primary-100">
          Custom maintenance programs that reduce repairs by up to 75% and extend equipment life by 40%.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl font-bold">75%</div>
            <div class="text-sm">Fewer Breakdowns</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl font-bold">30%</div>
            <div class="text-sm">Energy Savings</div>
          </div>
          <div class="bg-white/10 backdrop-blur-sm rounded-lg p-4">
            <div class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl font-bold">24/7</div>
            <div class="text-sm">Priority Service</div>
          </div>
        </div>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/commercial/preventive-maintenance" variant="secondary" size="lg" class="bg-white text-primary-600 hover:bg-gray-100">
            View Maintenance Plans
          </Button>
          <Button href="tel:(940) 390-5676" variant="outline" size="lg" class="border-white text-white hover:bg-white hover:text-primary-600">
            Call (940) 390-5676
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Commercial Reviews -->
  <ReviewsSection 
    limit={6}
    variant="grid"
    showCta={true}
  />

  <!-- Final CTA -->
  <section class="section-full bg-gray-900 text-white">
    <div class="site-container section-padding">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-lg sm:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold mb-4">
          Ready to Upgrade Your Commercial HVAC?
        </h2>
        <p class="text-lg sm:text-xl mb-8 text-gray-300">
          Join hundreds of North Texas businesses that trust Jupitair for their commercial HVAC needs.
        </p>
        
        <div class="bg-gray-800 rounded-2xl p-8 mb-8">
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6 text-left">
            <div>
              <h3 class="font-bold text-lg mb-3">For Immediate Service:</h3>
              <Button href="tel:(940) 390-5676" variant="primary" size="lg" class="w-full">
                <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                </svg>
                (940) 390-5676
              </Button>
              <p class="text-sm text-gray-400 mt-2">24/7 Emergency Available</p>
            </div>
            <div>
              <h3 class="font-bold text-lg mb-3">Schedule a Consultation:</h3>
              <Button href="/commercial/quote" variant="secondary" size="lg" class="w-full">
                Get Free Quote
              </Button>
              <p class="text-sm text-gray-400 mt-2">Response within 2 hours</p>
            </div>
          </div>
        </div>
        
        <div class="flex flex-wrap justify-center gap-8 text-sm text-gray-400">
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            Licensed & Insured
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            NATE Certified
          </div>
          <div class="flex items-center gap-2">
            <svg class="w-5 h-5 mr-2 text-green-500" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            $2M General Liability
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>