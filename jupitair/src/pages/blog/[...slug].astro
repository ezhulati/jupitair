---
import { getCollection } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';
import ModernBlogLayout from '../../layouts/ModernBlogLayout.astro';
import EnterpriseBlogLayout from '../../layouts/EnterpriseBlogLayout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Determine which layout to use
const useModernLayout = entry.slug === 'frozen-evaporator-coil-visual';
const useEnterpriseLayout = entry.slug === 'enterprise-template-demo' || 
                           entry.data.featured || 
                           entry.data.isEmergency;

let Layout;
if (useEnterpriseLayout) {
  Layout = EnterpriseBlogLayout;
} else if (useModernLayout) {
  Layout = ModernBlogLayout;
} else {
  Layout = BlogLayout;
}
---

<Layout frontmatter={entry.data}>
  <Content />
</Layout>