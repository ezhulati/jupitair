---
import { getCollection } from 'astro:content';
import EnhancedBlogLayout from '../../layouts/EnhancedBlogLayout.astro';
// Keep the old layout as fallback
import BlogLayout from '../../layouts/BlogLayout.astro';

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Use EnhancedBlogLayout for featured posts or posts with enhanced metadata
const useEnhancedLayout = entry.data.featured || 
                          entry.data.expertReviewer || 
                          entry.data.technicalDifficulty ||
                          entry.data.readingTime >= 5;

const LayoutComponent = useEnhancedLayout ? EnhancedBlogLayout : BlogLayout;
---

<LayoutComponent frontmatter={entry.data}>
  <Content />
</LayoutComponent>