---
import { getCollection } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';
import ModernBlogLayout from '../../layouts/ModernBlogLayout.astro';

export const prerender = true;

export async function getStaticPaths() {
  const blogEntries = await getCollection('blog');
  return blogEntries.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { Content } = await entry.render();

// Use ModernBlogLayout for visual articles
const useModernLayout = entry.slug === 'frozen-evaporator-coil-visual';
const Layout = useModernLayout ? ModernBlogLayout : BlogLayout;
---

<Layout frontmatter={entry.data}>
  <Content />
</Layout>