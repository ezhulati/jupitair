---
import Layout from '../layouts/BaseLayout.astro';
import CloudinaryImage from '../components/CloudinaryImage.astro';
import { siteImages } from '../lib/cloudinary';
---

<Layout title="Cloudinary Test">
  <div class="site-container py-8">
    <h1 class="break-words text-3xl font-bold mb-6">Cloudinary Image Test</h1>
    <div class="min-w-0 grid gap-6">
      <CloudinaryImage
        src={siteImages.homeHero}
        alt="Cloudinary Test Image"
        preset="hero"
        class="w-full rounded-lg shadow-xl"
        loading="eager"
      />
      <p class="text-gray-600">
        This image is served via Cloudinary with automatic optimization, format selection, and responsive sizing.
      </p>
    </div>
  </div>
</Layout>