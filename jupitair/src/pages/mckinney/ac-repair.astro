---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Button from '../../components/ui/Button.astro';
import Card from '../../components/ui/Card.astro';
import Badge from '../../components/ui/Badge.astro';
import ReviewsSection from '../../components/reviews/ReviewsSection.astro';

// City-specific data for McKinney
const cityData = {
  name: "McKinney",
  state: "TX",
  population: "195,000+",
  neighborhoods: ["Historic Downtown", "Stonebridge Ranch", "Adriatica", "Craig Ranch", "Tucker Hill"],
  zipCodes: ["75069", "75070", "75071", "75072"],
  travelTime: "15-35 minutes",
  serviceArea: "Primary service area",
  localFeatures: "Historic downtown square and master-planned communities"
};

// Service data for AC Repair
const service = {
  name: "AC Repair",
  title: "AC Repair in McKinney, TX",
  meta_title: "AC Repair McKinney TX | Same-Day Service | Jupitair HVAC",
  meta_description: "Fast AC repair in McKinney, TX with same-day service. Expert technicians serving all McKinney neighborhoods. Call (940) 390-5676 for immediate service.",
  description: "Professional air conditioning repair services throughout McKinney, Texas. Our certified technicians provide same-day service for AC problems in Stonebridge Ranch, Craig Ranch, and all McKinney neighborhoods.",
  shortDescription: "Fast AC repair with same-day service throughout McKinney",
  h1: "AC Repair in McKinney, TX",
  emergency: true,
  pricing: {
    starting: 89,
    average: 250,
    note: "Diagnostic fee applies to service call"
  },
  service_time: "Same day service available",
  warranty: "90-day warranty on all repairs"
};


// Schema.org data
const serviceSchema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": service.title,
  "description": service.description,
  "provider": {
    "@type": "HVACBusiness",
    "name": "Jupitair HVAC",
    "telephone": "(940) 390-5676",
    "address": {
      "@type": "PostalAddress",
      "streetAddress": "5760 Legacy Dr B3-501",
      "addressLocality": "Plano", 
      "addressRegion": "TX",
      "postalCode": "75024"
    }
  },
  "areaServed": {
    "@type": "City",
    "name": "McKinney",
    "addressRegion": "TX"
  },
  "serviceType": "Air Conditioning Repair",
  "offers": {
    "@type": "Offer",
    "priceRange": `$${service.pricing.starting}+`,
    "description": service.pricing.note
  }
};

const breadcrumbSchema = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [
    {
      "@type": "ListItem",
      "position": 1,
      "name": "Home",
      "item": "https://jupitairhvac.com/"
    },
    {
      "@type": "ListItem", 
      "position": 2,
      "name": "McKinney HVAC",
      "item": "https://jupitairhvac.com/mckinney"
    },
    {
      "@type": "ListItem",
      "position": 3,
      "name": "AC Repair",
      "item": "https://jupitairhvac.com/mckinney/ac-repair"
    }
  ]
};

// FAQ data specific to McKinney
const faqData = [
  {
    question: "How quickly can you get to McKinney for AC repair?",
    answer: "We typically arrive in McKinney within 15-35 minutes for emergency calls, and offer same-day service for most AC repair appointments. We serve all McKinney neighborhoods including Stonebridge Ranch, Craig Ranch, and Historic Downtown."
  },
  {
    question: "What does AC repair cost in McKinney?",
    answer: "AC repair in McKinney starts at $89 for diagnostics, with most repairs averaging $250. We provide upfront pricing before any work begins and never charge hidden fees."
  },
  {
    question: "Do you service all areas of McKinney?",
    answer: "Yes, we provide AC repair services throughout all of McKinney, TX including zip codes 75069, 75070, 75071, and 75072. No trip charges within our McKinney service area."
  }
];

const faqSchema = {
  "@context": "https://schema.org",
  "@type": "FAQPage",
  "mainEntity": faqData.map(faq => ({
    "@type": "Question",
    "name": faq.question,
    "acceptedAnswer": {
      "@type": "Answer",
      "text": faq.answer
    }
  }))
};
---

<BaseLayout 
  title={service.meta_title}
  description={service.meta_description}
  canonical={`https://jupitairhvac.com/mckinney/ac-repair`}
>
  <!-- Schema.org structured data -->
  <script type="application/ld+json" set:html={JSON.stringify(serviceSchema)} />
  <script type="application/ld+json" set:html={JSON.stringify(breadcrumbSchema)} />
