      <!-- Service Areas -->
      <div class="text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-8">
          Serving 8 North Texas Cities
        </h2>
        <p class="text-xl text-gray-600 mb-12 max-w-3xl mx-auto">
