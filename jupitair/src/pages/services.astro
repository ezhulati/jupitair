                    <svg class="w-4 h-4 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Professional installation
                  </li>
                </ul>
                
                <!-- CTA -->
                <div class="flex flex-col sm:flex-row gap-3">
                  <Button href={`/services/${service.slug}`} variant="primary" size="md" class="flex-1">
                    Learn More
                  </Button>
                  <Button href="/contact" variant="outline" size="md" class="flex-1">
                    Get Quote
                  </Button>
                </div>
              </Card>
            ))}
          </div>
        </div>
      )}

      <!-- Other Services (Efficiency & Upgrades) -->
      {(servicesByCategory.efficiency.length > 0 || servicesByCategory.upgrade.length > 0) && (
