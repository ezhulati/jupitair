---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/ui/Button.astro';
import Card from '../components/ui/Card.astro';
import Badge from '../components/ui/Badge.astro';
import { readFileSync } from 'fs';
import { parse } from 'yaml';

// Load services data
const servicesData = parse(readFileSync('./data/services.yml', 'utf8'));
const moneyPages = servicesData.money_pages;


// Group services by category for better organization
const servicesByCategory = {
  cooling: moneyPages.filter(service => service.category === 'cooling'),
  heating: moneyPages.filter(service => service.category === 'heating'), 
  installation: moneyPages.filter(service => service.category === 'installation'),
  efficiency: moneyPages.filter(service => service.category === 'efficiency'),
  emergency: moneyPages.filter(service => service.category === 'emergency'),
  upgrade: moneyPages.filter(service => service.category === 'upgrade')
};

// Page metadata
const pageTitle = "HVAC Services in North Texas | Jupitair HVAC - AC, Heating & More";
const pageDescription = "Complete HVAC services in North Texas including AC repair, heating repair, installation, and emergency service. Licensed technicians serving 8 cities with upfront pricing.";

// Schema for services page
const servicesSchema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Jupitair HVAC",
  "description": pageDescription,
  "url": "https://jupitairhvac.com/services",
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "HVAC Services",
    "itemListElement": moneyPages.map(service => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": service.name,
        "description": service.description,
        "category": service.category
      },
      "priceSpecification": {
        "@type": "PriceSpecification",
        "minPrice": service.pricing.starting,
        "priceCurrency": "USD"
      }
    }))
  }
};
---

<BaseLayout 
  title={pageTitle}
  description={pageDescription}
  canonical="https://jupitairhvac.com/services"
>
  <!-- Schema.org structured data -->
  <script type="application/ld+json" set:html={JSON.stringify(servicesSchema)} />

  <!-- Hero Section -->
  <section class="relative bg-gradient-to-br from-primary-700 via-primary-600 to-primary-800 text-white py-16 lg:py-24 overflow-hidden">
    
    <div class="container mx-auto px-4 relative z-20">
      <div class="max-w-4xl mx-auto text-center">
        
        <!-- H1 Title -->
        <h1 class="text-3xl sm:text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
          Complete HVAC Services in North Texas
        </h1>
        
        <!-- Description -->
        <p class="text-lg sm:text-xl md:text-2xl text-blue-100 mb-8 leading-relaxed max-w-3xl mx-auto">
          From emergency repairs to new installations, we provide comprehensive HVAC services throughout North Texas with same-day service and upfront pricing.
        </p>
        
        <!-- Primary CTAs -->
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-6 justify-center">
          <Button href="tel:(940) 390-5676" variant="emergency" size="xl" class="flex items-center justify-center space-x-3">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
            </svg>
            <span>Call (940) 390-5676</span>
          </Button>
          
          <Button href="/contact" size="xl" variant="secondary">
            Get Free Estimate
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Categories Overview -->
  <section class="py-16 lg:py-24 bg-white">
    <div class="container mx-auto px-4">
      
      <!-- Emergency Services First -->
      {servicesByCategory.emergency.length > 0 && (
        <div class="mb-16">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4">
              Emergency HVAC Services
            </h2>
            <p class="text-xl text-gray-600 max-w-3xl mx-auto">
              24/7 emergency service when you need it most. Fast response times throughout North Texas.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 gap-8">
            {servicesByCategory.emergency.map((service) => (
              <Card variant="elevated" padding="lg" class="group h-full bg-gradient-to-br from-emergency-50 to-red-50 border-emergency-200">
                <div class="flex items-start space-x-4 mb-4">
                  <!-- Emergency Icon -->
                  <div class="w-14 h-14 bg-emergency-100 text-emergency-600 rounded-lg flex items-center justify-center flex-shrink-0">
                    <svg class="w-7 h-7" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                  
                  <div class="flex-1 min-w-0">
                    <div class="flex items-start justify-between mb-2">
                      <h3 class="text-xl font-semibold text-gray-900 group-hover:text-emergency-600 transition-colors">
                        {service.name}
                      </h3>
                      <Badge variant="emergency" size="sm">
                        24/7
                      </Badge>
                    </div>
                    <p class="text-gray-700 leading-relaxed mb-4">
                      {service.shortDescription}
                    </p>
                  </div>
                </div>
                
                <!-- Service Details -->
                <div class="space-y-3 mb-6">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Starting at:</span>
                    <span class="font-semibold text-emergency-700">${service.pricing.starting}</span>
                  </div>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-600">Response time:</span>
                    <span class="text-gray-900">{service.service_time}</span>
                  </div>
                </div>
                
                <!-- CTA -->
                <div class="flex flex-col sm:flex-row gap-3">
                  <Button href={`/services/${service.slug}`} variant="emergency" size="md" class="flex-1">
                    Learn More
                  </Button>
                  <Button href="tel:(940) 390-5676" variant="outline" size="md" class="flex-1">
