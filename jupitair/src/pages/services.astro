                <div class="space-y-3 mb-6">
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-500">Starting at:</span>
                    <span class="font-semibold text-blue-700">${service.pricing.starting}</span>
                  </div>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-500">Service time:</span>
                    <span class="text-gray-900">{service.service_time}</span>
                  </div>
                  <div class="flex items-center justify-between text-sm">
                    <span class="text-gray-500">Warranty:</span>
                    <span class="text-gray-900">{service.warranty}</span>
                  </div>
                </div>
                
                <!-- CTA -->
                <div class="flex flex-col sm:flex-row gap-3">
                  <Button href={`/services/${service.slug}`} variant="primary" size="md" class="flex-1">
