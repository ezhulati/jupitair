---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/ui/Card.astro';
import Button from '../components/ui/Button.astro';
import PremiumCard from '../components/ui/PremiumCard.astro';
import PremiumHero from '../components/layout/PremiumHero.astro';
import Badge from '../components/ui/Badge.astro';
import Icon from '../components/ui/Icon.astro';
import { getCollection } from 'astro:content';

// Get all service pages from MDX collection
const servicePages = await getCollection('pages', ({ id }) => {
  return id.startsWith('services/');
});

// Transform MDX pages to service cards
const services = servicePages.map(page => {
  const slug = page.id.replace('services/', '');
  const name = page.data.service
    .split('-')
    .map(word => word.charAt(0).toUpperCase() + word.slice(1))
    .join(' ');
  
  return {
    slug,
    name,
    title: page.data.title,
    description: page.data.description,
    pricing: page.data.pricing,
    tags: page.data.tags || [],
    isEmergency: page.data.tags?.includes('emergency'),
    isCommercial: page.data.tags?.includes('commercial'),
  };
});

// Separate residential and commercial services
const residentialServices = services.filter(s => !s.isCommercial);
const commercialServices = services.filter(s => s.isCommercial);
---

<BaseLayout 
  title="HVAC Services North Texas | Residential & Commercial | Jupitair"
  description="Complete HVAC services for homes and businesses in North Texas. Residential AC repair, commercial HVAC maintenance, 24/7 emergency service. Call (940) 390-5676."
  keywords="HVAC services, AC repair, heating repair, commercial HVAC, residential HVAC"
  canonical="https://jupitairhvac.com/services"
  ogImage="/og-images/services.jpg"
  overlayHeader={true}>
  <!-- Hero Section -->
  <PremiumHero
    title="Professional HVAC Services"
    subtitle="Residential & Commercial Solutions"
    description="Complete heating, cooling, and air quality services for North Texas homes and businesses. Same-day service, 24/7 emergency response."
    ctaPrimary={{ text: "Call (940) 390-5676", href: "tel:9403905676" }}
    ctaSecondary={{ text: "Get Quote", href: "/contact" }}
    variant="gradient"
    height="md"
  />

  <!-- All Services Grid -->
  <section class="section-full bg-white">
    <div class="site-container section-padding">
      <div class="max-w-7xl mx-auto">
        
        <!-- Residential Services -->
        <div class="mb-16">
          <div class="text-center mb-8">
            <Badge variant="primary" class="mb-4">Residential Services</Badge>
            <h2 class="text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
              Home Comfort Solutions
            </h2>
            <p class="text-xl text-gray-700 max-w-3xl mx-auto">
              Complete HVAC services for North Texas homes. From emergency repairs to new installations.
            </p>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {residentialServices.map(service => (
              <Card class="overflow-visible"  variant="elevated"  class="hover:shadow-xl transition-all">
                <div class="flex justify-between items-start mb-3">
                  <h3 class="text-xl font-bold text-gray-900">{service.name}</h3>
                  {service.isEmergency && (
                    <Badge variant="danger" size="sm">24/7</Badge>
                  )}
                </div>
                {service.pricing && (
                  <div class="text-xl sm:text-2xl font-bold text-primary-600 mb-3">
                    ${service.pricing.min.toLocaleString()} - ${service.pricing.max.toLocaleString()}
                  </div>
                )}
                <p class="text-gray-700 mb-4 line-clamp-2">
                  {service.description.split('.')[0]}.
                </p>
                <Button 
                  href={`/services/${service.slug}`} 
                  variant="outline" 
                  size="sm" 
                  class="w-full"
                >
                  Learn More →
                </Button>
              </Card>
            ))}
          </div>
        </div>

        <!-- Commercial Services -->
        {commercialServices.length > 0 && (
          <div>
            <div class="text-center mb-8">
              <Badge variant="secondary" class="mb-4">Commercial Services</Badge>
              <h2 class="text-xl sm:text-2xl sm:text-3xl lg:text-4xl md:text-xl sm:text-2xl sm:text-3xl lg:text-4xl sm:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
                Business HVAC Solutions
              </h2>
              <p class="text-xl text-gray-700 max-w-3xl mx-auto">
                Professional commercial HVAC for restaurants, retail, and offices.
              </p>
            </div>
            
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              {commercialServices.map(service => (
                <Card class="overflow-visible"  variant="elevated"  class="hover:shadow-xl transition-all border-2 border-gray-200">
                  <div class="flex justify-between items-start mb-3">
                    <h3 class="text-xl font-bold text-gray-900">{service.name}</h3>
                    <Badge variant="secondary" size="sm">Commercial</Badge>
                  </div>
                  {service.pricing && (
                    <div class="text-xl sm:text-2xl font-bold text-primary-600 mb-3">
                      ${service.pricing.min.toLocaleString()} - ${service.pricing.max.toLocaleString()}
                    </div>
                  )}
                  <p class="text-gray-700 mb-4 line-clamp-2">
                    {service.description.split('.')[0]}.
                  </p>
                  <Button 
                    href={`/services/${service.slug}`} 
                    variant="primary" 
                    size="sm" 
                    class="w-full"
                  >
                    Learn More →
                  </Button>
                </Card>
              ))}
            </div>
          </div>
        )}
      </div>
    </div>
  </section>

  <!-- Quick Contact -->
  <section class="section-full bg-gray-50">
    <div class="site-container section-padding">
      <div class="max-w-4xl mx-auto">
        <div class="text-center bg-white rounded-2xl p-8 shadow-lg">
          <h3 class="text-xl sm:text-2xl font-bold text-gray-900 mb-4">
            Need Immediate Service?
          </h3>
          <p class="text-gray-700 mb-6">
            Our team is ready to help with your HVAC needs, residential or commercial.
          </p>
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <Button href="tel:(940) 390-5676" variant="primary" size="lg">
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
              </svg>
              Call (940) 390-5676
            </Button>
            <Button href="/contact" variant="outline" size="lg">
              Get Quote
            </Button>
          </div>
          
          <div class="mt-6 flex flex-wrap justify-center gap-6 text-sm text-gray-700">
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Licensed & Insured
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              24/7 Emergency Service
            </div>
            <div class="flex items-center gap-2">
              <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Same-Day Service
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>