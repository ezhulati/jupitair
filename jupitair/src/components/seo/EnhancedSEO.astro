---
export interface Props {
  title: string;
  description: string;
  canonical?: string;
  keywords?: string;
  ogImage?: string;
  ogType?: 'website' | 'article' | 'local.business';
  city?: string;
  service?: string;
  noindex?: boolean;
}

const {
  title,
  description,
  canonical,
  keywords,
  ogImage,
  ogType = 'website',
  city,
  service,
  noindex = false,
} = Astro.props;

// Construct the full URL for canonical and OG URL
const siteUrl = import.meta.env.PUBLIC_SITE_URL || 'https://jupitairhvac.com';
const fullUrl = canonical || siteUrl;

// Determine the OG image URL
let ogImageUrl = ogImage || '/images/og-default.jpg';

// Construct full OG image URL
if (!ogImageUrl.startsWith('http')) {
  ogImageUrl = `${siteUrl}${ogImageUrl}`;
}

// Generate dynamic OG image path based on page
function getOGImagePath(): string {
  if (ogImage) return ogImage;
  
  // Determine image based on current page
  const path = currentPath.toLowerCase();
  
  if (path === '/') {
    return '/og-images/home.jpg';
  } else if (path.includes('/services/')) {
    const serviceName = path.split('/services/')[1]?.replace('/', '');
    return `/og-images/services-${serviceName}.jpg`;
  } else if (city) {
    return `/og-images/${city.toLowerCase().replace(' ', '-')}.jpg`;
  }
  
  return '/og-images/default.jpg';
}

const dynamicOGImage = getOGImagePath();
if (!dynamicOGImage.startsWith('http')) {
  ogImageUrl = `${siteUrl}${dynamicOGImage}`;
}

// Rich snippets for local business
const localBusinessData = {
  "@context": "https://schema.org",
  "@type": "HVACBusiness",
  "name": "Jupitair HVAC",
  "telephone": "+19403905676",
  "url": siteUrl,
  "address": {
    "@type": "PostalAddress",
    "addressLocality": city || "Frisco",
    "addressRegion": "TX",
    "addressCountry": "US"
  },
  "image": ogImageUrl,
  "priceRange": "$$"
};
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
{keywords && <meta name="keywords" content={keywords} />}
{noindex && <meta name="robots" content="noindex, nofollow" />}

<!-- Canonical URL -->
<link rel="canonical" href={fullUrl} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={ogType} />
<meta property="og:url" content={fullUrl} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImageUrl} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={title} />
<meta property="og:site_name" content="Jupitair HVAC" />
<meta property="og:locale" content="en_US" />

<!-- Twitter / X -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={fullUrl} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={ogImageUrl} />
<meta name="twitter:image:alt" content={title} />

<!-- Additional OG tags for local business -->
{city && (
  <>
    <meta property="og:locality" content={city} />
    <meta property="og:region" content="TX" />
    <meta property="og:country_name" content="United States" />
  </>
)}

<!-- LinkedIn specific -->
<meta property="og:image:type" content="image/jpeg" />
<meta name="author" content="Jupitair HVAC" />

<!-- Apple specific -->
<meta name="apple-mobile-web-app-title" content="Jupitair HVAC" />
<meta name="application-name" content="Jupitair HVAC" />

<!-- Rich Snippets for better SEO -->
<script type="application/ld+json" set:html={JSON.stringify(localBusinessData)} />

<!-- Preconnect to external domains -->
<link rel="preconnect" href="https://fonts.googleapis.com" />
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />

<!-- Favicon variations for different platforms -->
<link rel="icon" type="image/x-icon" href="/favicon.ico" />
<link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
<link rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png" />

<!-- Theme color for browser chrome -->
<meta name="theme-color" content="#0066CC" />
<meta name="msapplication-TileColor" content="#0066CC" />