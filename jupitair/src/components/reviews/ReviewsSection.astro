---
import ReviewCard from './ReviewCard.astro';
import Button from '../ui/Button.astro';
import reviewsData from '../../data/reviews.json';

export interface Props {
  limit?: number;
  service?: string;
  city?: string;
  variant?: 'grid' | 'carousel' | 'featured';
  showCta?: boolean;
}

const {
  limit = 3,
  service,
  city,
  variant = 'grid',
  showCta = true
} = Astro.props;


// Filter reviews based on service and city if provided
let filteredReviews = [...reviewsData.reviews];

if (service) {
  filteredReviews = filteredReviews.filter(r => 
    r.service.toLowerCase().includes(service.toLowerCase())
  );
}

if (city) {
  filteredReviews = filteredReviews.filter(r => 
    r.city.toLowerCase() === city.toLowerCase()
  );
}

// Get the most recent reviews up to the limit
const displayReviews = filteredReviews.slice(0, limit);

// Calculate stats
const avgRating = reviewsData.averageRating;
const totalReviews = reviewsData.totalReviews;
---

<section class="py-16 lg:py-24 bg-gray-50 relative overflow-hidden">
  <div class="container mx-auto px-4 relative z-10">
    
    <!-- Section Header -->
    <div class="text-center mb-12">
      <div class="flex items-center justify-center gap-2 mb-4">
        <div class="flex items-center">
          {[...Array(5)].map((_, i) => (
            <svg
              class={`w-6 h-6 ${i < Math.floor(avgRating) ? 'text-yellow-400' : 'text-gray-300'}`}
              fill="currentColor"
              viewBox="0 0 20 20"
            >
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
          ))}
        </div>
        <span class="text-2xl font-bold text-gray-900">{avgRating}</span>
        <span class="text-gray-600">({totalReviews} reviews)</span>
      </div>
      
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-gray-900 mb-4">
        What Our Customers Say
      </h2>
      <p class="text-xl text-gray-600 max-w-3xl mx-auto">
        Real reviews from real customers across North Texas. 
        We're proud to maintain a {avgRating}-star rating with over {totalReviews} satisfied customers.
      </p>
    </div>
    
    <!-- Reviews Grid -->
    {variant === 'grid' && (
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 mb-12">
        {displayReviews.map((review) => (
          <ReviewCard
            author={review.author}
            rating={review.rating}
            date={review.date}
            text={review.text}
            service={review.service}
            city={review.city}
            verified={review.verified}
            source={review.source || 'google'}
          />
        ))}
      </div>
    )}
    
    <!-- Featured Review (for service/city pages) -->
    {variant === 'featured' && displayReviews[0] && (
      <div class="max-w-3xl mx-auto mb-12">
        <ReviewCard
          author={displayReviews[0].author}
          rating={displayReviews[0].rating}
          date={displayReviews[0].date}
          text={displayReviews[0].text}
          service={displayReviews[0].service}
          city={displayReviews[0].city}
          verified={displayReviews[0].verified}
          source={displayReviews[0].source || 'google'}
          variant="featured"
        />
      </div>
    )}
    
    <!-- Trust Badges -->
    <div class="grid sm:grid-cols-3 gap-6 max-w-4xl mx-auto mb-12">
      <div class="text-center">
        <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-8 h-8 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900">Google Verified</h3>
        <p class="text-sm text-gray-600 mt-1">All reviews from Google</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-yellow-100 rounded-full flex items-center justify-center mx-auto mb-3">
          <span class="text-2xl font-bold text-yellow-600">{avgRating}</span>
        </div>
        <h3 class="font-semibold text-gray-900">Average Rating</h3>
        <p class="text-sm text-gray-600 mt-1">Across {totalReviews} reviews</p>
      </div>
      
      <div class="text-center">
        <div class="w-16 h-16 bg-success-100 rounded-full flex items-center justify-center mx-auto mb-3">
          <svg class="w-8 h-8 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M9 2a1 1 0 000 2h2a1 1 0 100-2H9z"/>
            <path fill-rule="evenodd" d="M4 5a2 2 0 012-2 1 1 0 000 2H6a2 2 0 100 4h2a2 2 0 100-4h-.5a1 1 0 000-2H8a2 2 0 012-2h2a2 2 0 012 2v9a2 2 0 01-2 2H6a2 2 0 01-2-2V5z" clip-rule="evenodd"/>
          </svg>
        </div>
        <h3 class="font-semibold text-gray-900">Local Business</h3>
        <p class="text-sm text-gray-600 mt-1">Serving North Texas</p>
      </div>
    </div>
    
    <!-- CTA -->
    {showCta && (
      <div class="text-center">
        <h3 class="text-2xl font-bold text-gray-900 mb-4">
          Join Our Happy Customers
        </h3>
        <p class="text-gray-600 mb-8 max-w-2xl mx-auto">
          Experience the Jupitair difference with professional HVAC service, 
          upfront pricing, and our satisfaction guarantee.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center max-w-lg mx-auto">
          <Button href="/contact" variant="primary" size="lg" class="flex-1 justify-center">
            Get Your Free Estimate
          </Button>
          <Button 
            href="https://search.google.com/local/writereview?placeid=ChIJAazsg-twakURAJ2zXUWzH-4" 
            variant="outline" 
            size="lg" 
            class="flex-1 justify-center"
            target="_blank"
            rel="noopener"
          >
            Leave a Review
          </Button>
        </div>
      </div>
    )}
  </div>
</section>