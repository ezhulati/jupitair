<footer class="bg-gray-900 text-gray-300">
  <!-- Main footer content -->
  <div class="container mx-auto px-4 py-12">
    <div class="grid grid-cols-2 lg:grid-cols-4 gap-x-4 gap-y-8 sm:gap-8">
      
      <!-- Company Info -->
