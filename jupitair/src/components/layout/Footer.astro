---
import Button from '../ui/Button.astro';
import PhoneLink from '../ui/PhoneLink.astro';
import EmergencyPhoneButton from '../ui/EmergencyPhoneButton.astro';
import EmergencyPhoneButtonSimple from '../ui/EmergencyPhoneButtonSimple.astro';
import OptimizedLogo from '../ui/OptimizedLogo.astro';
import { BUSINESS_CONFIG } from '../../config/business';
---

<footer class="bg-gray-900 text-gray-300">
  <!-- Main footer content -->
  <div class="site-container py-12">
    <!-- Mobile Emergency CTA - Only visible on mobile -->
    <div class="block sm:hidden mb-8">
      <div class="bg-red-600 rounded-xl p-4 text-white">
        <div class="min-w-0 flex items-center justify-between">
          <div>
            <div class="font-bold text-lg">Emergency Service</div>
            <p class="text-sm text-white/90">Available 24/7</p>
          </div>
          <EmergencyPhoneButtonSimple class="!w-auto !px-4 !py-2" />
        </div>
      </div>
    </div>
    
    <div class="min-w-0 grid grid-cols-2 lg:grid-cols-4 gap-x-4 gap-y-8 sm:gap-8">
      
      <!-- Company Info -->
      <div class="col-span-2 sm:col-span-1 lg:col-span-1">
        <div class="mb-6">
          <OptimizedLogo 
            variant="white"
            class="h-24 sm:h-28 lg:h-32 w-auto mb-4"
            width={128}
            height={128}
            loading="lazy"
          />
          <p class="text-sm text-gray-400">North Texas HVAC Experts</p>
        </div>
        
        <p class="text-gray-400 mb-4 leading-relaxed">
          Professional HVAC services throughout North Texas since 2008. 
          Licensed, insured, and committed to your comfort.
        </p>
        
        <!-- Social Links -->
        <div class="flex space-x-4 mb-6">
          <a 
            href="https://www.facebook.com/profile.php?id=100092531284875"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-blue-500 transition-colors"
            aria-label="Follow us on Facebook"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
            </svg>
          </a>
          <a 
            href="https://g.page/r/CaMENupblSv3EAE/review"
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-400 hover:text-red-500 transition-colors"
            aria-label="Leave us a Google Review"
          >
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
              <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
              <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
              <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
              <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
            </svg>
          </a>
        </div>
        
        <div class="mb-6">
          <a 
            href="https://EnriZhulati.com" 
            target="_blank" 
            rel="noopener noreferrer"
            class="inline-flex items-center space-x-2 text-sm text-gray-400 hover:text-white transition-colors"
          >
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
            </svg>
            <span>Made in Texas</span>
          </a>
        </div>
        
        <!-- Contact Info -->
        <div class="space-y-3">
          <div class="min-w-0 flex items-center space-x-3">
            <PhoneLink 
              variant="text"
              context="footer"
              class="text-secondary-400 hover:text-secondary-300 font-semibold"
            />
          </div>
          
          <div class="min-w-0 flex items-center space-x-3">
            <svg class="w-5 h-5 text-secondary-500" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
              <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
            </svg>
            <a href="mailto:Contact@jupitairhvac.com" class="text-gray-400 hover:text-white">
              Contact@jupitairhvac.com
            </a>
          </div>
          
          <div class="min-w-0 flex items-start space-x-3">
            <svg class="w-5 h-5 text-secondary-500 mt-0.5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
              <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
            </svg>
            <div class="text-gray-400">
              <p>5760 Legacy Dr B3-501</p>
              <p>Plano, TX 75024</p>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Services -->
      <div class="col-span-1">
        <h4 class="text-lg font-semibold text-white mb-6">Our Services</h4>
        <ul class="space-y-3">
          <li><a href="/services/ac-repair" class="text-gray-400 hover:text-white transition-colors">AC Repair</a></li>
          <li><a href="/services/heating-repair" class="text-gray-400 hover:text-white transition-colors">Heating Repair</a></li>
          <li><a href="/services/ac-installation" class="text-gray-400 hover:text-white transition-colors">AC Installation</a></li>
          <li><a href="/services/heating-installation" class="text-gray-400 hover:text-white transition-colors">Heating Installation</a></li>
          <li><a href="/services/heat-pump-systems" class="text-gray-400 hover:text-white transition-colors">Heat Pump Systems</a></li>
          <li><a href="/services/duct-sealing" class="text-gray-400 hover:text-white transition-colors">Duct Sealing</a></li>
          <li><a href="/services/thermostat-installation" class="text-gray-400 hover:text-white transition-colors">Thermostat Installation</a></li>
          <li><a href="/services/commercial-hvac" class="text-gray-400 hover:text-white transition-colors">Commercial HVAC</a></li>
          <li><a href="/services/indoor-air-quality" class="text-gray-400 hover:text-white transition-colors">Indoor Air Quality</a></li>
        </ul>
      </div>
      
      <!-- Service Areas -->
      <div class="col-span-1">
        <h4 class="text-lg font-semibold text-white mb-6">Service Areas</h4>
        <ul class="space-y-3">
          <li><a href="/frisco" class="text-gray-400 hover:text-white transition-colors">Frisco, TX</a></li>
          <li><a href="/plano" class="text-gray-400 hover:text-white transition-colors">Plano, TX</a></li>
          <li><a href="/mckinney" class="text-gray-400 hover:text-white transition-colors">McKinney, TX</a></li>
          <li><a href="/allen" class="text-gray-400 hover:text-white transition-colors">Allen, TX</a></li>
          <li><a href="/prosper" class="text-gray-400 hover:text-white transition-colors">Prosper, TX</a></li>
          <li><a href="/the-colony" class="text-gray-400 hover:text-white transition-colors">The Colony, TX</a></li>
          <li><a href="/little-elm" class="text-gray-400 hover:text-white transition-colors">Little Elm, TX</a></li>
          <li><a href="/addison" class="text-gray-400 hover:text-white transition-colors">Addison, TX</a></li>
        </ul>
      </div>
      
      <!-- Company & Emergency -->
      <div class="col-span-2 sm:col-span-1">
        <h4 class="text-lg font-semibold text-white mb-6">Company</h4>
        <ul class="space-y-3 mb-8">
          <li><a href="/about" class="text-gray-400 hover:text-white transition-colors">About Us</a></li>
          <li><a href="/contact" class="text-gray-400 hover:text-white transition-colors">Contact</a></li>
          <li><a href="/blog" class="text-gray-400 hover:text-white transition-colors">Resources</a></li>
          <li><a href="/services" class="text-gray-400 hover:text-white transition-colors">All Services</a></li>
          <li><a href="/commercial" class="text-gray-400 hover:text-white transition-colors">Commercial</a></li>
        </ul>
        
        <!-- Emergency CTA - Hidden on mobile since we show it at top -->
        <div class="hidden sm:block bg-emergency-900 border border-emergency-700 rounded-lg p-4">
          <div class="text-emergency-300 font-semibold mb-2">Emergency Service</div>
          <p class="text-emergency-400 text-sm mb-3">Available 24/7 for urgent HVAC issues</p>
          <EmergencyPhoneButtonSimple />
        </div>
      </div>
    </div>
  </div>
  
  <!-- Business Hours & Credentials -->
  <div class="border-t border-gray-800">
    <div class="site-container py-6">
      <div class="min-w-0 grid grid-cols-1 md:grid-cols-3 gap-6 text-center md:text-left">
        
        <!-- Business Hours -->
        <div>
          <div class="font-semibold text-white mb-2">Business Hours</div>
          <div class="text-sm text-gray-400 space-y-1">
            <p>Monday - Friday: 8:00 AM - 6:00 PM</p>
            <p>Saturday: 8:00 AM - 4:00 PM</p>
            <p>Sunday: Emergency Service Only</p>
            <p class="text-emergency-400 font-medium">24/7 Emergency Service</p>
          </div>
        </div>
        
        <!-- Credentials -->
        <div>
          <div class="font-semibold text-white mb-2">Licensed & Certified</div>
          <div class="text-sm text-gray-400 space-y-1">
            <p>TACLA Licensed & Insured</p>
            <p>EPA Certified Technicians</p>
            <p>NATE Certified Professionals</p>
            <p>Fully Insured & Bonded</p>
          </div>
        </div>
        
        <!-- Service Guarantees -->
        <div>
          <div class="font-semibold text-white mb-2">Service Guarantees</div>
          <div class="text-sm text-gray-400 space-y-1">
            <p>Free Estimates on Installations</p>
            <p>100% Satisfaction Guarantee</p>
            <p>Upfront Transparent Pricing</p>
            <p>Same Day Service Available</p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- Bottom bar -->
  <div class="border-t border-gray-800">
    <div class="site-container py-4">
      <div class="min-w-0 flex flex-col md:flex-row md:justify-between md:items-center text-sm text-gray-400">
        <div class="mb-4 md:mb-0 md:flex md:items-center">
          <span>&copy; 2025 Jupitair HVAC. All rights reserved.</span>
        </div>
        
        <div class="min-w-0 flex items-center space-x-6 md:flex-shrink-0">
          <a href="/privacy" class="hover:text-white transition-colors whitespace-nowrap">Privacy Policy</a>
          <a href="/terms" class="hover:text-white transition-colors whitespace-nowrap">Terms of Service</a>
          <a href="/sitemap" class="hover:text-white transition-colors whitespace-nowrap">Sitemap</a>
        </div>
      </div>
    </div>
  </div>
</footer>