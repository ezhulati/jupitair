---
import { Image } from 'astro:assets';
import Button from '../ui/Button.astro';
import PhoneLink from '../ui/PhoneLink.astro';
import { BUSINESS_CONFIG } from '../../config/business';
import logoColor from '../../../public/images/logo-color.png';
import logoWhite from '../../../public/images/logo-white.png';

export interface Props {
  overlay?: boolean;
}

const { overlay = false } = Astro.props;

const cities = [
  { name: 'Frisco', slug: 'frisco' },
  { name: 'Plano', slug: 'plano' },
  { name: 'McKinney', slug: 'mckinney' },
  { name: 'Allen', slug: 'allen' },
  { name: 'Prosper', slug: 'prosper' },
  { name: 'The Colony', slug: 'the-colony' },
  { name: 'Little Elm', slug: 'little-elm' },
  { name: 'Addison', slug: 'addison' }
];
---

<style>
  /* Mobile header offset for emergency banner */
  @media (max-width: 767px) {
    #main-header {
      top: 36px !important;
    }
  }
  
  @media (min-width: 768px) {
    #main-header {
      top: 0 !important;
    }
  }
  
  .nav-dropdown {
    position: absolute !important;
    top: calc(100% + 8px) !important;
    left: 0 !important;
    opacity: 0;
    visibility: hidden;
    transform: translateY(-10px);
    transition: all 0.15s ease-out;
    z-index: 9999 !important;
    background: white !important;
    border: 1px solid #e5e7eb !important;
    border-radius: 8px !important;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06) !important;
    min-width: 280px !important;
    max-width: 320px !important;
  }
  
  /* Ensure dropdown links are always dark for proper contrast */
  .nav-dropdown a {
    color: #374151 !important; /* gray-700 */
  }
  
  .nav-dropdown a:hover {
    color: #2563eb !important; /* primary-600 */
    background-color: #f9fafb !important; /* gray-50 */
  }
  
  .nav-item:hover .nav-dropdown,
  .nav-item:focus-within .nav-dropdown {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
  }
  
  .mobile-menu {
    transform: translateX(-100%);
    transition: transform 0.3s ease;
  }
  
  .mobile-menu.open {
    transform: translateX(0);
  }

  /* High contrast mode support */
  @media (prefers-contrast: high) {
    .nav-dropdown {
      border-width: 2px !important;
    }
  }

  /* Reduced motion support */
  @media (prefers-reduced-motion: reduce) {
    .nav-dropdown,
    .mobile-menu {
      transition: none !important;
    }
  }
</style>

<!-- Skip to main content link for accessibility -->
<a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 bg-primary-600 text-white px-4 py-2 rounded z-[99999]">
  Skip to main content
</a>

<!-- Emergency Banner - Mobile Only -->
<div class="md:hidden fixed top-0 left-0 right-0 bg-red-500 text-white py-2 text-center z-[60] animate-pulse">
  <div class="flex items-center justify-center gap-2">
    <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
      <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
    </svg>
    <span class="font-semibold text-sm">24/7 Emergency Service Available Call Now</span>
  </div>
</div>

<!-- Header -->
<header 
  class={`fixed top-0 left-0 right-0 z-50 transition-all duration-300 ${overlay ? 'bg-transparent' : 'bg-white shadow-sm'}`}
  id="main-header"
  role="banner"
  data-overlay={overlay ? 'true' : 'false'}
>
  <!-- Top Bar - Desktop -->
  <div class={`${overlay ? 'bg-black/5 backdrop-blur-sm border-b border-white/10' : 'bg-gray-50 border-b border-gray-200'} py-3 hidden md:block transition-all duration-300`}>
    <div class="header-container">
      <div class="flex justify-between items-center text-sm">
        <span class={`${overlay ? 'text-white/80' : 'text-gray-600'} transition-colors`}>Licensed & Insured â€¢ Serving North Texas Since 2008</span>
        <div class="flex items-center gap-4">
          <PhoneLink 
            variant="text" 
            context="header"
            class={`${overlay ? 'text-white hover:text-blue-200' : 'text-gray-700 hover:text-primary-600'} transition-colors font-semibold`}
          />
          <span 
            class="bg-red-500 text-white px-4 py-1.5 rounded-full text-xs font-bold animate-pulse shadow-md hover:shadow-lg transition-shadow" 
            data-emergency-cta
            role="status"
            aria-label="24/7 Emergency service available"
          >
            24/7 EMERGENCY
          </span>
        </div>
      </div>
    </div>
  </div>

  <!-- Main Navigation - Contained -->
  <nav class={`${overlay ? 'py-0 bg-transparent' : 'py-0.5 bg-white'} transition-all duration-300`} role="navigation" aria-label="Main navigation">
    <div class="header-container">
      <div class="flex items-center justify-between">
        
        <!-- Logo -->
        <div class="flex-shrink-0">
          <a href="/" class="block" aria-label="Jupitair HVAC - Home">
            <Image 
              src={overlay ? logoWhite : logoColor} 
              alt="Jupitair HVAC Logo" 
              class="h-20 lg:h-24 w-auto hover:scale-105 transition-transform duration-200"
              loading="eager"
              width={400}
              height={400}
              format="webp"
            />
          </a>
        </div>

        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center space-x-8" role="menubar">
          
          <!-- Residential Services -->
          <div class="relative nav-item group" role="none">
            <button 
              class={`flex items-center px-3 py-2 ${overlay ? 'text-white hover:text-blue-200' : 'text-gray-700 hover:text-primary-600'} focus:text-primary-600 font-medium transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 rounded`}
              role="menuitem"
              aria-expanded="false"
              aria-haspopup="true"
              aria-controls="residential-dropdown"
              id="residential-trigger"
            >
              Residential
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:rotate-180" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            
            <div 
              class="w-80 bg-white rounded-xl shadow-2xl border border-gray-200 nav-dropdown backdrop-blur-xl"
              role="menu"
              aria-labelledby="residential-trigger"
              id="residential-dropdown"
            >
              <div class="p-6">
                <div class="mb-4">
                  <a 
                    href="/services" 
                    class="flex items-center justify-between px-4 py-3 text-sm font-bold text-primary-600 hover:bg-primary-50 focus:bg-primary-50 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset"
                    role="menuitem"
                  >
                    <span>View All Services</span>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                    </svg>
                  </a>
                </div>
                
                <div class="grid grid-cols-2 gap-2" role="group" aria-label="Residential services">
                  <a href="/services/ac-repair" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 focus:bg-gray-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset" role="menuitem">AC Repair</a>
                  <a href="/services/heating-repair" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 focus:bg-gray-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset" role="menuitem">Heating Repair</a>
                  <a href="/services/ac-installation" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 focus:bg-gray-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset" role="menuitem">AC Installation</a>
                  <a href="/services/heating-installation" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 focus:bg-gray-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset" role="menuitem">Heating Install</a>
                  <a href="/services/maintenance-plans" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 focus:bg-gray-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset" role="menuitem">Maintenance</a>
                  <a href="/services/indoor-air-quality" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-50 focus:bg-gray-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset" role="menuitem">Air Quality</a>
                </div>
                
                <div class="mt-4 pt-3 border-t border-gray-100">
                  <a 
                    href="/commercial/emergency-service" 
                    class="flex items-center px-3 py-2 text-sm text-red-600 font-bold hover:bg-red-50 focus:bg-red-50 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-red-500 focus-visible:ring-inset"
                    role="menuitem"
                  >
                    <span class="flex h-2 w-2 mr-2" aria-hidden="true">
                      <span class="animate-ping absolute inline-flex h-2 w-2 rounded-full bg-red-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-2 w-2 bg-red-500"></span>
                    </span>
                    24/7 Emergency Service
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Commercial -->
          <div class="relative nav-item group" role="none">
            <button 
              class={`flex items-center px-3 py-2 ${overlay ? 'text-white hover:text-blue-200' : 'text-gray-700 hover:text-primary-600'} focus:text-primary-600 font-medium transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 rounded`}
              role="menuitem"
              aria-expanded="false"
              aria-haspopup="true"
              aria-controls="commercial-dropdown"
              id="commercial-trigger"
            >
              Commercial
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:rotate-180" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            
            <div 
              class="w-96 bg-white rounded-xl shadow-2xl border border-gray-200 nav-dropdown backdrop-blur-xl"
              role="menu"
              aria-labelledby="commercial-trigger"
              id="commercial-dropdown"
            >
              <div class="p-6">
                <div class="mb-4">
                  <a 
                    href="/services/commercial-hvac" 
                    class="flex items-center justify-between px-4 py-3 text-sm font-bold text-primary-600 hover:bg-primary-50 focus:bg-primary-50 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset"
                    role="menuitem"
                  >
                    <span>Commercial HVAC Services</span>
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                      <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"/>
                    </svg>
                  </a>
                </div>
                
                <div class="space-y-2" role="group" aria-label="Commercial services">
                  <a 
                    href="/commercial/restaurant-hvac" 
                    class="flex items-center justify-between px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 focus:bg-gray-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset"
                    role="menuitem"
                  >
                    <div>
                      <div class="font-semibold">Restaurant HVAC</div>
                      <div class="text-xs text-gray-500">Kitchen ventilation & dining comfort</div>
                    </div>
                    <span class="text-xs text-green-600 font-bold bg-green-50 px-2 py-1 rounded" aria-label="Price range $15,000 to $40,000">$15K-$40K</span>
                  </a>
                  
                  <a 
                    href="/commercial/retail-hvac" 
                    class="flex items-center justify-between px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 focus:bg-gray-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset"
                    role="menuitem"
                  >
                    <div>
                      <div class="font-semibold">Retail & Strip Mall</div>
                      <div class="text-xs text-gray-500">Multi-zone climate systems</div>
                    </div>
                    <span class="text-xs text-green-600 font-bold bg-green-50 px-2 py-1 rounded" aria-label="Price range $8,000 to $30,000">$8K-$30K</span>
                  </a>
                  
                  <a 
                    href="/commercial/office-hvac" 
                    class="flex items-center justify-between px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 focus:bg-gray-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset"
                    role="menuitem"
                  >
                    <div>
                      <div class="font-semibold">Office Buildings</div>
                      <div class="text-xs text-gray-500">Professional climate control</div>
                    </div>
                    <span class="text-xs text-green-600 font-bold bg-green-50 px-2 py-1 rounded" aria-label="Price range $15,000 to $50,000">$15K-$50K</span>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Service Areas -->
          <div class="relative nav-item group" role="none">
            <button 
              class={`flex items-center px-3 py-2 ${overlay ? 'text-white hover:text-blue-200' : 'text-gray-700 hover:text-primary-600'} focus:text-primary-600 font-medium transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 rounded`}
              role="menuitem"
              aria-expanded="false"
              aria-haspopup="true"
              aria-controls="areas-dropdown"
              id="areas-trigger"
            >
              Service Areas
              <svg class="ml-1 w-4 h-4 transition-transform group-hover:rotate-180" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            
            <div 
              class="w-64 bg-white rounded-xl shadow-2xl border border-gray-200 nav-dropdown backdrop-blur-xl"
              role="menu"
              aria-labelledby="areas-trigger"
              id="areas-dropdown"
            >
              <div class="p-6">
                <div class="mb-3">
                  <h4 class="text-xs font-bold text-gray-400 uppercase tracking-wider">North Texas Cities</h4>
                </div>
                <div class="grid grid-cols-2 gap-1" role="group" aria-label="Service areas">
                  {cities.map(city => (
                    <a 
                      href={`/${city.slug}`} 
                      class="block px-3 py-2 text-sm text-gray-700 hover:bg-primary-50 focus:bg-primary-50 hover:text-primary-600 focus:text-primary-600 rounded-lg transition-colors text-left focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-inset" 
                      role="menuitem"
                    >
                      {city.name}
                    </a>
                  ))}
                </div>
              </div>
            </div>
          </div>

          <!-- Regular Links -->
          <a href="/about" class={`px-3 py-2 ${overlay ? 'text-white hover:text-blue-200' : 'text-gray-700 hover:text-primary-600'} focus:text-primary-600 font-medium transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 rounded`} role="menuitem">About</a>
          <a href="/blog" class={`px-3 py-2 ${overlay ? 'text-white hover:text-blue-200' : 'text-gray-700 hover:text-primary-600'} focus:text-primary-600 font-medium transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 rounded`} role="menuitem">Resources</a>
          <a href="/contact" class={`px-3 py-2 ${overlay ? 'text-white hover:text-blue-200' : 'text-gray-700 hover:text-primary-600'} focus:text-primary-600 font-medium transition-colors focus:outline-none focus-visible:ring-2 focus-visible:ring-primary-500 focus-visible:ring-offset-2 rounded`} role="menuitem">Contact</a>
        </div>

        <!-- CTA Button -->
        <div class="hidden lg:flex items-center ml-6">
          <Button 
            href="/contact" 
            variant={overlay ? 'outline' : 'primary'}
            size="lg"
            class={overlay ? 'border-white text-white hover:bg-white hover:text-blue-600 font-bold px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200' : 'bg-primary-600 hover:bg-primary-700 text-white font-bold px-6 py-3 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200'}
            ariaLabel="Get free HVAC quote"
          >
            Get Free Quote
          </Button>
        </div>

        <!-- Mobile Menu Button -->
        <div class="lg:hidden">
          <button 
            type="button" 
            class={`inline-flex items-center justify-center p-2 rounded-md ${overlay ? 'text-white hover:text-blue-200 hover:bg-white/10' : 'text-gray-700 hover:text-primary-600 hover:bg-gray-100'} focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500`}
            aria-controls="mobile-menu"
            aria-expanded="false"
            id="mobile-menu-btn"
          >
            <span class="sr-only">Open main menu</span>
            <!-- Hamburger icon -->
            <svg class="h-6 w-6" id="hamburger" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </div>
  </nav>

</header>

<!-- Mobile Menu Overlay -->
<div class="lg:hidden fixed inset-0 z-[99997] opacity-0 invisible transition-all duration-300" id="mobile-overlay" aria-hidden="true">
  <div class="absolute inset-0 bg-black bg-opacity-50"></div>
</div>

<!-- Mobile Menu -->
<div class="lg:hidden fixed top-0 left-0 h-full w-80 bg-white z-[99998] mobile-menu" id="mobile-menu" aria-hidden="true">
  <div class="flex flex-col h-full">
    <!-- Mobile Menu Header -->
    <div class="flex items-center justify-between p-4 border-b border-gray-200">
      <Image src={logoColor} alt="Jupitair HVAC" class="h-16 w-auto" loading="eager" width={160} height={160} format="webp" />
      <button type="button" class="p-2 rounded-md text-gray-700 hover:text-primary-600" id="mobile-close">
        <span class="sr-only">Close menu</span>
        <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
        </svg>
      </button>
    </div>

    <!-- Mobile Menu Content -->
    <div class="flex-1 overflow-y-auto py-6">
      <nav class="space-y-1 px-4">
        <!-- Residential Services -->
        <div class="space-y-1">
          <h3 class="px-3 py-2 text-sm font-semibold text-gray-900 uppercase tracking-wider">Residential</h3>
          <a href="/services" class="block px-3 py-2 text-base text-primary-600 font-medium hover:bg-primary-50 rounded-md">View All Services</a>
          <a href="/services/ac-repair" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">AC Repair</a>
          <a href="/services/heating-repair" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">Heating Repair</a>
          <a href="/services/ac-installation" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">AC Installation</a>
          <a href="/services/heating-installation" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">Heating Installation</a>
          <a href="/services/maintenance-plans" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">Maintenance</a>
          <a href="/services/indoor-air-quality" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">Air Quality</a>
          <a href="/commercial/emergency-service" class="block px-3 py-2 text-base text-red-600 font-medium hover:bg-red-50 rounded-md">24/7 Emergency</a>
        </div>

        <!-- Commercial -->
        <div class="space-y-1 pt-4">
          <h3 class="px-3 py-2 text-sm font-semibold text-gray-900 uppercase tracking-wider">Commercial</h3>
          <a href="/services/commercial-hvac" class="block px-3 py-2 text-base text-primary-600 font-medium hover:bg-primary-50 rounded-md">Commercial HVAC</a>
          <a href="/commercial/restaurant-hvac" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">Restaurant HVAC</a>
          <a href="/commercial/retail-hvac" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">Retail & Strip Mall</a>
          <a href="/commercial/office-hvac" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">Office Buildings</a>
        </div>

        <!-- Service Areas -->
        <div class="space-y-1 pt-4">
          <h3 class="px-3 py-2 text-sm font-semibold text-gray-900 uppercase tracking-wider">Service Areas</h3>
          {cities.map(city => (
            <a href={`/${city.slug}`} class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">{city.name}</a>
          ))}
        </div>

        <!-- Main Links -->
        <div class="space-y-1 pt-4 border-t border-gray-200">
          <a href="/about" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">About</a>
          <a href="/blog" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">Resources</a>
          <a href="/contact" class="block px-3 py-2 text-base text-gray-700 hover:bg-gray-50 rounded-md">Contact</a>
        </div>
      </nav>
    </div>

    <!-- Mobile Menu Footer -->
    <div class="border-t border-gray-200 p-4 space-y-4">
      <a 
        href="/contact" 
        class="block w-full bg-primary-600 text-white text-center px-4 py-3 rounded-md font-bold hover:bg-primary-700 transition-colors"
      >
        Get Free Quote
      </a>
      <PhoneLink 
        variant="button" 
        context="cta"
        size="lg"
        class="w-full bg-emergency-600 hover:bg-emergency-700 text-white font-bold text-center rounded-md"
      />
    </div>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Mobile menu functionality
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    const mobileOverlay = document.getElementById('mobile-overlay');
    const mobileClose = document.getElementById('mobile-close');
    const hamburger = document.getElementById('hamburger');

    function openMobileMenu() {
      mobileMenu.classList.add('open');
      mobileOverlay.classList.remove('opacity-0', 'invisible');
      hamburger.classList.add('hidden');
      document.body.style.overflow = 'hidden';
      
      // Update ARIA attributes
      mobileMenuBtn.setAttribute('aria-expanded', 'true');
      mobileMenu.setAttribute('aria-hidden', 'false');
      
      // Focus the first focusable element in the menu
      const firstFocusable = mobileMenu.querySelector('button, a, input, select, textarea, [tabindex]:not([tabindex="-1"])');
      if (firstFocusable) {
        firstFocusable.focus();
      }
    }

    function closeMobileMenu() {
      mobileMenu.classList.remove('open');
      mobileOverlay.classList.add('opacity-0', 'invisible');
      hamburger.classList.remove('hidden');
      document.body.style.overflow = '';
      
      // Update ARIA attributes
      mobileMenuBtn.setAttribute('aria-expanded', 'false');
      mobileMenu.setAttribute('aria-hidden', 'true');
      
      // Return focus to menu button
      mobileMenuBtn.focus();
    }

    mobileMenuBtn.addEventListener('click', function() {
      if (mobileMenu.classList.contains('open')) {
        closeMobileMenu();
      } else {
        openMobileMenu();
      }
    });

    mobileClose.addEventListener('click', closeMobileMenu);
    mobileOverlay.addEventListener('click', closeMobileMenu);

    // Close menu when clicking on links
    const mobileLinks = mobileMenu.querySelectorAll('a');
    mobileLinks.forEach(link => {
      link.addEventListener('click', closeMobileMenu);
    });

    // Handle escape key
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape' && mobileMenu.classList.contains('open')) {
        closeMobileMenu();
      }
    });

    // Trap focus within mobile menu when open
    function trapFocus(e) {
      if (!mobileMenu.classList.contains('open')) return;
      
      const focusableElements = mobileMenu.querySelectorAll(
        'button, a, input, select, textarea, [tabindex]:not([tabindex="-1"])'
      );
      const firstElement = focusableElements[0];
      const lastElement = focusableElements[focusableElements.length - 1];

      if (e.key === 'Tab') {
        if (e.shiftKey && document.activeElement === firstElement) {
          e.preventDefault();
          lastElement.focus();
        } else if (!e.shiftKey && document.activeElement === lastElement) {
          e.preventDefault();
          firstElement.focus();
        }
      }
    }

    document.addEventListener('keydown', trapFocus);

    // Enhanced dropdown functionality for desktop
    const navButtons = document.querySelectorAll('.nav-item button');
    
    navButtons.forEach(button => {
      const dropdown = button.nextElementSibling;
      
      button.addEventListener('click', function(e) {
        e.preventDefault();
        const isExpanded = button.getAttribute('aria-expanded') === 'true';
        
        // Close all other dropdowns
        navButtons.forEach(otherButton => {
          if (otherButton !== button) {
            otherButton.setAttribute('aria-expanded', 'false');
          }
        });
        
        // Toggle current dropdown
        button.setAttribute('aria-expanded', (!isExpanded).toString());
        
        if (!isExpanded && dropdown) {
          // Position dropdown
          const rect = button.getBoundingClientRect();
          dropdown.style.top = (rect.bottom + window.scrollY) + 'px';
          dropdown.style.left = rect.left + 'px';
          
          // Focus first link in dropdown
          const firstLink = dropdown.querySelector('a');
          if (firstLink) {
            setTimeout(() => firstLink.focus(), 100);
          }
        }
      });

      // Handle keyboard navigation
      button.addEventListener('keydown', function(e) {
        if (e.key === 'ArrowDown' || e.key === 'Enter' || e.key === ' ') {
          e.preventDefault();
          button.click();
        }
      });
    });

    // Close dropdowns when clicking outside
    document.addEventListener('click', function(e) {
      if (!e.target.closest('.nav-item')) {
        navButtons.forEach(button => {
          button.setAttribute('aria-expanded', 'false');
        });
      }
    });

    // Position fixed dropdowns correctly
    function positionDropdowns() {
      const navItems = document.querySelectorAll('.nav-item');
      
      navItems.forEach(item => {
        const dropdown = item.querySelector('.nav-dropdown');
        if (dropdown) {
          item.addEventListener('mouseenter', function() {
            const rect = item.getBoundingClientRect();
            dropdown.style.top = (rect.bottom + window.scrollY) + 'px';
            dropdown.style.left = rect.left + 'px';
          });
        }
      });
    }

    positionDropdowns();

    // Reposition on window resize
    window.addEventListener('resize', positionDropdowns);

    // Hide/show header on scroll and handle overlay transition
    let lastScrollY = window.scrollY;
    let ticking = false;

    function updateHeader() {
      const header = document.getElementById('main-header');
      const currentScrollY = window.scrollY;
      const isOverlay = header.getAttribute('data-overlay') === 'true';
      
      // Handle overlay background transition
      if (isOverlay) {
        if (currentScrollY > 50) {
          // Add background when scrolled
          header.classList.remove('bg-transparent');
          header.classList.add('bg-white', 'shadow-sm');
          header.setAttribute('data-scrolled', 'true');
          
          // Force update ALL text elements to dark
          const navButtons = header.querySelectorAll('.nav-item button, .nav-item > span');
          const navLinks = header.querySelectorAll('a[role="menuitem"], .nav-item a');
          const logo = header.querySelector('img[alt*="Jupitair"]');
          
          navButtons.forEach(btn => {
            btn.classList.remove('text-white', 'hover:text-blue-200');
            btn.classList.add('text-gray-700', 'hover:text-primary-600');
            // Force color change
            btn.style.color = '#374151';
          });
          
          navLinks.forEach(link => {
            // Skip dropdown links - they should always be dark
            if (link.closest('.nav-dropdown')) {
              link.style.color = '#374151'; // Ensure dropdown links stay dark
              return;
            }
            link.classList.remove('text-white', 'hover:text-blue-200');
            link.classList.add('text-gray-700', 'hover:text-primary-600');
            // Force color change
            link.style.color = '#374151';
          });
          
          // Switch to colored logo
          if (logo && logo.src.includes('logo-white')) {
            logo.src = logo.src.replace('logo-white', 'logo-color');
          }
          
          // Update top bar
          const topBar = header.querySelector('[class*="bg-black/5"], [class*="bg-black/10"]');
          if (topBar) {
            topBar.className = topBar.className.replace(/bg-black\/\d+/, 'bg-gray-50');
            topBar.className = topBar.className.replace('border-white/10', 'border-gray-200');
            topBar.className = topBar.className.replace('border-white/20', 'border-gray-200');
            
            // Update all text in top bar
            topBar.querySelectorAll('span, a').forEach(el => {
              el.style.color = '#4B5563'; // gray-600
            });
          }
          
          // Update nav background
          const nav = header.querySelector('nav');
          if (nav) {
            nav.classList.remove('bg-transparent');
            nav.classList.add('bg-white');
          }
          
          // Update CTA button
          const ctaButton = header.querySelector('a[href="/contact"].border-2');
          if (ctaButton) {
            ctaButton.classList.remove('border-white', 'text-white', 'bg-transparent', 'hover:bg-white', 'hover:text-blue-600');
            ctaButton.classList.add('bg-primary-600', 'hover:bg-primary-700', 'text-white', 'border-primary-600');
            ctaButton.style.backgroundColor = '#2563eb';
            ctaButton.style.color = 'white';
            ctaButton.style.borderColor = '#2563eb';
          }
          
          // Update mobile menu button
          const mobileBtn = document.getElementById('mobile-menu-btn');
          if (mobileBtn) {
            mobileBtn.classList.remove('text-white', 'hover:text-blue-200', 'hover:bg-white/10');
            mobileBtn.classList.add('text-gray-700', 'hover:text-primary-600', 'hover:bg-gray-100');
          }
        } else {
          // Remove background when at top
          header.classList.add('bg-transparent');
          header.classList.remove('bg-white', 'shadow-sm');
          header.removeAttribute('data-scrolled');
          
          // Update text colors back to white
          const navButtons = header.querySelectorAll('.nav-item button');
          const navLinks = header.querySelectorAll('a[role="menuitem"]');
          const logo = header.querySelector('img');
          
          navButtons.forEach(btn => {
            btn.classList.add('text-white', 'hover:text-blue-200');
            btn.classList.remove('text-gray-700', 'hover:text-primary-600');
            // Reset inline style
            btn.style.color = '';
          });
          
          navLinks.forEach(link => {
            // Skip dropdown links - they should always be dark
            if (link.closest('.nav-dropdown')) {
              link.style.color = '#374151'; // Keep dropdown links dark
              return;
            }
            link.classList.add('text-white', 'hover:text-blue-200');
            link.classList.remove('text-gray-700', 'hover:text-primary-600');
            // Reset inline style
            link.style.color = '';
          });
          
          // Switch to white logo
          if (logo && logo.src.includes('logo-color')) {
            logo.src = logo.src.replace('logo-color', 'logo-white');
          }
          
          // Update top bar back to transparent
          const topBar = header.querySelector('[class*="bg-gray-50"]');
          if (topBar) {
            topBar.className = topBar.className.replace('bg-gray-50', 'bg-black/10');
            topBar.className = topBar.className.replace('border-gray-200', 'border-white/20');
            
            // Reset text colors in top bar
            topBar.querySelectorAll('span, a').forEach(el => {
              el.style.color = ''; // Reset to original
            });
          }
          
          // Update nav background
          const nav = header.querySelector('nav');
          if (nav) {
            nav.classList.add('bg-transparent');
            nav.classList.remove('bg-white');
          }
          
          // Update CTA button back to transparent
          const ctaButton = header.querySelector('a[href="/contact"].border-2');
          if (ctaButton) {
            ctaButton.classList.add('border-white', 'text-white', 'bg-transparent', 'hover:bg-white', 'hover:text-blue-600');
            ctaButton.classList.remove('bg-primary-600', 'hover:bg-primary-700', 'border-primary-600');
            ctaButton.style.backgroundColor = '';
            ctaButton.style.color = '';
            ctaButton.style.borderColor = '';
          }
          
          // Update mobile menu button
          const mobileBtn = document.getElementById('mobile-menu-btn');
          if (mobileBtn) {
            mobileBtn.classList.add('text-white', 'hover:text-blue-200', 'hover:bg-white/10');
            mobileBtn.classList.remove('text-gray-700', 'hover:text-primary-600', 'hover:bg-gray-100');
          }
        }
      }
      
      // Handle header hide/show on scroll
      if (currentScrollY > 100) { // Only start hiding after scrolling 100px
        if (currentScrollY > lastScrollY) {
          // Scrolling down - hide header
          header.style.transform = 'translateY(-100%)';
        } else {
          // Scrolling up - show header
          header.style.transform = 'translateY(0)';
        }
      } else {
        // Always show header at top of page
        header.style.transform = 'translateY(0)';
      }
      
      lastScrollY = currentScrollY;
      ticking = false;
    }

    function onScroll() {
      if (!ticking) {
        requestAnimationFrame(updateHeader);
        ticking = true;
      }
    }

    window.addEventListener('scroll', onScroll, { passive: true });
  });
</script>
