---
import Button from '../ui/Button.astro';
import reviewsData from '../../data/reviews.json';

const avgRating = reviewsData.averageRating;
const totalReviews = reviewsData.totalReviews;
---

<header class="bg-white shadow-md sticky top-0 z-40 transition-shadow duration-200">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 xl:px-12 max-w-7xl">
    <!-- Top bar with contact info -->
    <div class="border-b border-gray-200 py-3 hidden md:block">
      <div class="flex justify-between items-center text-sm">
        <div class="flex items-center space-x-6">
          <span class="text-gray-600">Licensed & Insured HVAC Contractor</span>
          <span class="text-gray-600">Serving North Texas Since 2008</span>
        </div>
        <div class="flex items-center space-x-6">
          <a href="tel:(940) 390-5676" class="text-phone hover:text-secondary-700 font-semibold">
            ðŸ“ž (940) 390-5676
          </a>
          <span class="text-emergency-600 font-medium">24/7 Emergency Service</span>
        </div>
      </div>
    </div>
    
    <!-- Main navigation -->
    <nav class="py-4 lg:py-5" aria-label="Main navigation">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <div class="flex items-center">
          <a href="/" class="flex items-center space-x-3 group">
            <div class="w-10 h-10 sm:w-12 sm:h-12 bg-gradient-to-br from-primary-500 to-primary-700 rounded-lg flex items-center justify-center shadow-md group-hover:shadow-lg transition-shadow duration-200">
              <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zm0 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V8zm0 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1v-2z" clip-rule="evenodd"/>
              </svg>
            </div>
            <div>
              <h1 class="text-lg sm:text-xl lg:text-2xl font-bold text-gray-900 leading-tight">Jupitair HVAC</h1>
              <div class="flex items-center gap-2 mt-0.5">
                <div class="flex items-center">
                  {[...Array(5)].map((_, i) => (
                    <svg
                      class={`w-3 h-3 ${i < Math.floor(avgRating) ? 'text-yellow-400' : 'text-gray-300'}`}
                      fill="currentColor"
                      viewBox="0 0 20 20"
                    >
                      <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                    </svg>
                  ))}
                </div>
                <span class="text-xs text-gray-600">{avgRating} ({totalReviews} reviews)</span>
              </div>
            </div>
          </a>
        </div>
        
        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center space-x-8">
          <!-- Services Dropdown -->
          <div class="relative group">
            <button class="flex items-center space-x-1 text-gray-700 hover:text-primary-600 font-medium">
              <span>Services</span>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            <div class="absolute top-full left-0 mt-2 w-64 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="p-2">
                <a href="/services/ac-repair" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">AC Repair</a>
                <a href="/services/heating-repair" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Heating Repair</a>
                <a href="/services/hvac-installation" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">HVAC Installation</a>
                <a href="/services/duct-cleaning" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Duct Cleaning</a>
                <a href="/services/thermostat-installation" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Thermostat Installation</a>
                <a href="/services/energy-upgrades" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Energy Upgrades</a>
                <hr class="my-2">
                <a href="/services/emergency-hvac" class="block px-4 py-2 text-sm text-emergency-600 font-medium hover:bg-emergency-50 rounded-md">ðŸš¨ Emergency Service</a>
                <a href="/services/commercial-hvac" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Commercial HVAC</a>
                <a href="/services/residential-hvac" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Residential HVAC</a>
              </div>
            </div>
          </div>
          
          <!-- Service Areas Dropdown -->
          <div class="relative group">
            <button class="flex items-center space-x-1 text-gray-700 hover:text-primary-600 font-medium">
              <span>Service Areas</span>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            <div class="absolute top-full left-0 mt-2 w-48 bg-white rounded-lg shadow-lg border border-gray-200 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="p-2">
                <a href="/frisco" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Frisco, TX</a>
                <a href="/plano" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Plano, TX</a>
                <a href="/mckinney" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">McKinney, TX</a>
                <a href="/allen" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Allen, TX</a>
                <a href="/prosper" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Prosper, TX</a>
                <a href="/the-colony" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">The Colony, TX</a>
                <a href="/little-elm" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Little Elm, TX</a>
                <a href="/addison" class="block px-4 py-2 text-sm text-gray-700 hover:bg-primary-50 hover:text-primary-600 rounded-md">Addison, TX</a>
              </div>
            </div>
          </div>
          
          <a href="/about" class="text-gray-700 hover:text-primary-600 font-medium">About</a>
          <a href="/schedule" class="text-gray-700 hover:text-primary-600 font-medium">Schedule</a>
          <a href="/blog" class="text-gray-700 hover:text-primary-600 font-medium">Blog</a>
          <a href="/contact" class="text-gray-700 hover:text-primary-600 font-medium">Contact</a>
        </div>
        
        <!-- CTA Buttons -->
        <div class="hidden lg:flex items-center space-x-4">
          <Button href="/schedule" size="md" class="border-2 border-primary-600 text-primary-600 bg-transparent hover:bg-primary-600 hover:text-white focus:ring-primary-500 transition-all duration-200">
            Book Online
          </Button>
        </div>
        
        <!-- Mobile menu button -->
        <button class="lg:hidden p-3 text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-lg transition-colors duration-200" id="mobile-menu-button" aria-label="Toggle mobile menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
          <span class="sr-only">Open mobile menu</span>
        </button>
      </div>
    </nav>
    
    <!-- Mobile menu -->
    <div class="lg:hidden hidden bg-white border-t border-gray-200 shadow-lg" id="mobile-menu">
      <div class="py-6 max-h-[calc(100vh-80px)] overflow-y-auto">
        <!-- Emergency contact for mobile -->
        <div class="mb-6 mx-4 p-5 bg-emergency-50 rounded-xl shadow-sm border border-emergency-200">
          <a href="tel:(940) 390-5676" class="block text-center">
            <span class="text-emergency-600 font-bold text-lg">Emergency: (940) 390-5676</span>
            <br>
            <span class="text-emergency-600 text-sm">24/7 Service Available</span>
          </a>
        </div>
        
        <!-- Services -->
        <div class="mb-4">
          <h3 class="font-semibold text-gray-900 mb-2 px-4">Services</h3>
          <a href="/services/ac-repair" class="block px-6 py-3 text-gray-700 hover:bg-primary-50 rounded-lg transition-colors duration-200">AC Repair</a>
          <a href="/services/heating-repair" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Heating Repair</a>
          <a href="/services/hvac-installation" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">HVAC Installation</a>
          <a href="/services/emergency-hvac" class="block px-4 py-2 text-emergency-600 font-medium hover:bg-emergency-50">Emergency Service</a>
        </div>
        
        <!-- Service Areas -->
        <div class="mb-4">
          <h3 class="font-semibold text-gray-900 mb-2 px-4">Service Areas</h3>
          <a href="/frisco" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Frisco</a>
          <a href="/plano" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Plano</a>
          <a href="/mckinney" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">McKinney</a>
          <a href="/allen" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Allen</a>
        </div>
        
        <!-- Other links -->
        <div class="border-t border-gray-200 pt-4">
          <a href="/about" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">About</a>
          <a href="/schedule" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Schedule Service</a>
          <a href="/contact" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Contact</a>
          <a href="/blog" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Blog</a>
        </div>
        
        <!-- CTA -->
        <div class="px-4 pt-6 pb-4 border-t border-gray-200">
          <Button href="/schedule" variant="primary" size="lg" class="w-full justify-center shadow-lg">
            Schedule Service
          </Button>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>