---
import Button from '../ui/Button.astro';
import reviewsData from '../../data/reviews.json';

const avgRating = reviewsData.averageRating;
const totalReviews = reviewsData.totalReviews;

// All service areas in priority order
const cities = [
  { name: 'Frisco', slug: 'frisco' },
  { name: 'Plano', slug: 'plano' },
  { name: 'McKinney', slug: 'mckinney' },
  { name: 'Allen', slug: 'allen' },
  { name: 'Prosper', slug: 'prosper' },
  { name: 'The Colony', slug: 'the-colony' },
  { name: 'Little Elm', slug: 'little-elm' },
  { name: 'Addison', slug: 'addison' }
];
---

<header class="bg-white/95 backdrop-blur-md border-b border-gray-100 sticky top-0 z-50 transition-all duration-300">
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 xl:px-12 max-w-7xl">
    <!-- Top bar with contact info -->
    <div class="bg-gradient-to-r from-gray-50 to-gray-100 py-2.5 hidden md:block">
      <div class="flex justify-between items-center text-sm">
        <div class="flex items-center gap-8">
          <span class="text-gray-500 font-light">Licensed & Insured</span>
          <span class="text-gray-500 font-light">Serving North Texas Since 2008</span>
        </div>
        <div class="flex items-center gap-6">
          <a href="tel:(940) 390-5676" class="text-gray-900 hover:text-primary-600 font-medium transition-colors flex items-center gap-2">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
            </svg>
            (940) 390-5676
          </a>
          <span class="bg-emergency-100 text-emergency-700 px-3 py-1 rounded-full text-xs font-medium" data-emergency-cta>24/7 Emergency</span>
        </div>
      </div>
    </div>
    
    <!-- Main navigation -->
    <nav class="py-1" aria-label="Main navigation">
      <div class="flex items-center justify-between">
        <!-- Logo -->
        <div class="flex items-center">
          <a href="/" class="group">
            <img 
              src="/images/logo-color.png" 
              alt="Jupitair HVAC"
              class="h-20 sm:h-24 lg:h-28 w-auto transition-transform duration-200 group-hover:scale-105"
            />
          </a>
        </div>
        
        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center gap-1">
          <!-- Residential Services Dropdown -->
          <div class="relative group">
            <button class="flex items-center gap-1.5 px-4 py-2.5 text-gray-700 hover:text-primary-600 font-medium rounded-lg hover:bg-gray-50 transition-all duration-200">
              <span>Residential</span>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            <div class="absolute top-full left-0 mt-2 w-64 bg-white rounded-xl shadow-xl border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="p-3">
                <a href="/services" class="block px-4 py-3 text-sm font-semibold text-gray-900 hover:bg-gray-50 rounded-lg transition-colors">View All Services →</a>
                <div class="h-px bg-gray-100 my-2"></div>
                <a href="/services/ac-repair" class="block px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors">AC Repair</a>
                <a href="/services/heating-repair" class="block px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors">Heating Repair</a>
                <a href="/services/ac-installation" class="block px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors">AC Installation</a>
                <a href="/services/maintenance-plans" class="block px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors">Maintenance Plans</a>
                <a href="/services/emergency-hvac" class="block px-4 py-2.5 text-sm text-emergency-600 font-medium hover:bg-emergency-50 rounded-lg transition-colors">
                  <span class="flex items-center gap-2">
                    <span class="relative flex h-2 w-2">
                      <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emergency-400 opacity-75"></span>
                      <span class="relative inline-flex rounded-full h-2 w-2 bg-emergency-500"></span>
                    </span>
                    24/7 Emergency
                  </span>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Commercial Dropdown -->
          <div class="relative group">
            <button class="flex items-center gap-1.5 px-4 py-2.5 text-gray-700 hover:text-primary-600 font-medium rounded-lg hover:bg-gray-50 transition-all duration-200">
              <span>Commercial</span>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            <div class="absolute top-full left-0 mt-2 w-72 bg-white rounded-xl shadow-xl border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="p-3">
                <a href="/services/commercial-hvac" class="block px-4 py-3 text-sm font-semibold text-gray-900 hover:bg-gray-50 rounded-lg transition-colors">View Commercial Services →</a>
                <div class="h-px bg-gray-100 my-2"></div>
                <a href="/commercial/restaurant-hvac" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors group">
                  <span class="font-medium block">Restaurant HVAC</span>
                  <span class="text-xs text-gray-500 mt-0.5 block">$15K - $40K</span>
                </a>
                <a href="/commercial/retail-hvac" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors group">
                  <span class="font-medium block">Retail & Strip Mall</span>
                  <span class="text-xs text-gray-500 mt-0.5 block">$8K - $30K</span>
                </a>
                <a href="/commercial/office-hvac" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors group">
                  <span class="font-medium block">Small Office Buildings</span>
                  <span class="text-xs text-gray-500 mt-0.5 block">$15K - $50K</span>
                </a>
                <a href="/commercial/rtu-replacement" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors group">
                  <span class="font-medium block">RTU Replacement</span>
                  <span class="text-xs text-gray-500 mt-0.5 block">$8K - $45K</span>
                </a>
                <a href="/commercial/preventive-maintenance" class="block px-4 py-3 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors group">
                  <span class="font-medium block">Maintenance Programs</span>
                  <span class="text-xs text-gray-500 mt-0.5 block">From $199/month</span>
                </a>
              </div>
            </div>
          </div>
          
          <!-- Service Areas Dropdown -->
          <div class="relative group">
            <button class="flex items-center gap-1.5 px-4 py-2.5 text-gray-700 hover:text-primary-600 font-medium rounded-lg hover:bg-gray-50 transition-all duration-200">
              <span>Service Areas</span>
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M5.293 7.293a1 1 0 011.414 0L10 10.586l3.293-3.293a1 1 0 111.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4a1 1 0 010-1.414z" clip-rule="evenodd"/>
              </svg>
            </button>
            <div class="absolute top-full left-0 mt-2 w-48 bg-white rounded-xl shadow-xl border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
              <div class="p-3 space-y-1">
                {cities.map(city => (
                  <a href={`/${city.slug}`} class="block px-4 py-2.5 text-sm text-gray-700 hover:bg-gray-50 hover:text-primary-600 rounded-lg transition-colors">{city.name}, TX</a>
                ))}
              </div>
            </div>
          </div>
          
          <a href="/about" class="px-4 py-2.5 text-gray-700 hover:text-primary-600 font-medium rounded-lg hover:bg-gray-50 transition-all duration-200">About</a>
          <a href="/schedule" class="px-4 py-2.5 text-gray-700 hover:text-primary-600 font-medium rounded-lg hover:bg-gray-50 transition-all duration-200">Schedule</a>
          <a href="/blog" class="px-4 py-2.5 text-gray-700 hover:text-primary-600 font-medium rounded-lg hover:bg-gray-50 transition-all duration-200">Blog</a>
          <a href="/contact" class="px-4 py-2.5 text-gray-700 hover:text-primary-600 font-medium rounded-lg hover:bg-gray-50 transition-all duration-200">Contact</a>
        </div>
        
        <!-- CTA Button -->
        <div class="hidden lg:flex items-center gap-3 ml-4">
          <Button href="/schedule" size="lg" class="bg-primary-600 text-white hover:bg-primary-700 px-8 py-3 rounded-lg font-semibold shadow-sm hover:shadow-md transition-all duration-200">
            Get Quote
          </Button>
        </div>
        
        <!-- Mobile menu button -->
        <button class="lg:hidden p-2.5 text-gray-700 hover:text-gray-900 hover:bg-gray-50 rounded-lg transition-all duration-200" id="mobile-menu-button" aria-label="Toggle mobile menu">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
          <span class="sr-only">Open mobile menu</span>
        </button>
      </div>
    </nav>
    
    <!-- Mobile menu -->
    <div class="lg:hidden hidden bg-white/95 backdrop-blur-md border-t border-gray-100" id="mobile-menu">
      <div class="py-4 max-h-[calc(100vh-80px)] overflow-y-auto">
        <!-- Emergency contact for mobile -->
        <div class="mb-4 mx-4 p-4 bg-gradient-to-r from-emergency-50 to-emergency-100 rounded-xl">
          <a href="tel:(940) 390-5676" class="block text-center" data-emergency="true">
            <div class="flex items-center justify-center gap-2 mb-1">
              <span class="relative flex h-3 w-3">
                <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emergency-400 opacity-75"></span>
                <span class="relative inline-flex rounded-full h-3 w-3 bg-emergency-500"></span>
              </span>
              <span class="text-emergency-700 font-bold text-lg">Emergency Service</span>
            </div>
            <span class="text-emergency-600 text-sm" data-emergency-cta>(940) 390-5676 • Available 24/7</span>
          </a>
        </div>
        
        <!-- Services -->
        <div class="mb-4 px-4">
          <h3 class="font-semibold text-gray-900 mb-3 text-sm uppercase tracking-wider">Services</h3>
          <div class="space-y-1">
            <a href="/services/ac-repair" class="block px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">AC Repair</a>
            <a href="/services/furnace-repair" class="block px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">Heating Repair</a>
            <a href="/services/ac-installation" class="block px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-lg transition-colors">HVAC Installation</a>
            <a href="/services/emergency-ac-repair" class="block px-4 py-3 text-emergency-600 font-medium hover:bg-emergency-50 rounded-lg transition-colors">Emergency Service</a>
          </div>
        </div>
        
        <!-- Service Areas -->
        <div class="mb-4">
          <h3 class="font-semibold text-gray-900 mb-2 px-4">Service Areas</h3>
          {cities.map(city => (
            <a href={`/${city.slug}`} class="block px-4 py-2 text-gray-700 hover:bg-primary-50 rounded-lg transition-colors duration-200">{city.name}</a>
          ))}
        </div>
        
        <!-- Other links -->
        <div class="border-t border-gray-200 pt-4">
          <a href="/about" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">About</a>
          <a href="/schedule" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Schedule Service</a>
          <a href="/contact" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Contact</a>
          <a href="/blog" class="block px-4 py-2 text-gray-700 hover:bg-primary-50">Blog</a>
        </div>
        
        <!-- CTA -->
        <div class="px-4 pt-6 pb-4 border-t border-gray-200">
          <Button href="/schedule" variant="primary" size="lg" class="w-full justify-center shadow-lg">
            Schedule Service
          </Button>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const mobileMenuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    
    if (mobileMenuButton && mobileMenu) {
      mobileMenuButton.addEventListener('click', function() {
        mobileMenu.classList.toggle('hidden');
      });
    }
  });
</script>