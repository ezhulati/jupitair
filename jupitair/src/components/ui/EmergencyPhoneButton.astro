---
/**
 * EMERGENCY PHONE BUTTON - GUARANTEED VISIBLE TEXT
 * This component is specifically for the emergency service button
 * to ensure the text is ALWAYS visible with dark color on white background
 */

import { BUSINESS_CONFIG } from '../../config/business';

export interface Props {
  class?: string;
  showIcon?: boolean;
}

const { 
  class: className = '', 
  showIcon = false 
} = Astro.props;

const phoneNumber = BUSINESS_CONFIG.phone.main;
const displayNumber = BUSINESS_CONFIG.phone.display;

// Phone icon SVG
const phoneIcon = `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>`;
---

<a 
  href={`tel:${phoneNumber}`}
  class={`emergency-phone-button ${className}`}
  aria-label={`Call ${displayNumber}`}
>
  <!-- Mobile: Show "Call Now" ONLY -->
  <span class="emergency-phone-text sm:hidden">Call Now</span>
  <!-- Desktop: Show full number -->
  <span class="emergency-phone-text hidden sm:inline-block">Call {displayNumber}</span>
</a>

<style>
  /* NUCLEAR OVERRIDE - MAXIMUM SPECIFICITY */
  .emergency-phone-button {
    display: inline-flex !important;
    align-items: center !important;
    justify-content: center !important;
    padding: 0.75rem 1.5rem !important;
    background-color: #ffffff !important;
    border: 2px solid #dc2626 !important;
    border-radius: 0.5rem !important;
    font-weight: bold !important;
    font-size: 1rem !important;
    text-decoration: none !important;
    transition: all 0.2s !important;
    position: relative !important;
    z-index: 99999 !important;
    width: 100% !important;
  }
  
  .emergency-phone-button:hover {
    background-color: #fef2f2 !important;
    transform: scale(1.02) !important;
  }
  
  /* MAXIMUM VISIBILITY FOR TEXT */
  .emergency-phone-text {
    color: #dc2626 !important;
    font-weight: bold !important;
    position: relative !important;
    z-index: 100000 !important;
    pointer-events: none !important;
  }
  
  /* ENSURE PROPER DISPLAY OF RESPONSIVE TEXT */
  .emergency-phone-text.sm\:hidden {
    display: inline-block !important;
  }
  
  .emergency-phone-text.hidden {
    display: none !important;
  }
  
  @media (min-width: 640px) {
    .emergency-phone-text.sm\:hidden {
      display: none !important;
    }
    
    .emergency-phone-text.hidden.sm\:inline-block {
      display: inline-block !important;
    }
  }
  
  /* OVERRIDE ANY PARENT STYLES */
  .emergency-phone-button * {
    color: #dc2626 !important;
  }
  
  /* MOBILE SPECIFIC */
  @media (max-width: 640px) {
    .emergency-phone-button {
      min-height: 48px !important;
      font-size: 1.125rem !important;
    }
  }
</style>

<script>
  // Ensure text visibility on load
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('.emergency-phone-button');
    buttons.forEach(button => {
      const text = button.querySelector('.emergency-phone-text');
      if (text) {
        // Force text color
        text.style.color = '#dc2626';
        text.style.fontWeight = 'bold';
        text.style.position = 'relative';
        text.style.zIndex = '100000';
      }
      // Force button background
      button.style.backgroundColor = '#ffffff';
      button.style.zIndex = '99999';
    });
  });
</script>