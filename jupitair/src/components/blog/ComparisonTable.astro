---
export interface Props {
  title?: string;
  headers: string[];
  rows: (string | boolean | number)[][];
  highlightColumn?: number;
  class?: string;
}

const { title, headers, rows, highlightColumn, class: className = '' } = Astro.props;
---

<div class={`my-12 ${className}`}>
  {title && (
    <h3 class="text-2xl font-bold text-gray-900 mb-6">{title}</h3>
  )}
  
  <div class="overflow-x-auto rounded-xl border border-gray-200">
    <table class="w-full">
      <thead>
        <tr class="bg-gray-50 border-b border-gray-200">
          {headers.map((header, index) => (
            <th class={`px-6 py-4 text-left text-sm font-semibold text-gray-900 ${
              highlightColumn === index ? 'bg-blue-50' : ''
            }`}>
              {header}
            </th>
          ))}
        </tr>
      </thead>
      <tbody>
        {rows.map((row, rowIndex) => (
          <tr class={`border-b border-gray-100 hover:bg-gray-50 transition-colors ${
            rowIndex % 2 === 0 ? 'bg-white' : 'bg-gray-50/50'
          }`}>
            {row.map((cell, cellIndex) => (
              <td class={`px-6 py-4 text-sm ${
                highlightColumn === cellIndex ? 'bg-blue-50/50 font-medium' : 'text-gray-700'
              }`}>
                {typeof cell === 'boolean' ? (
                  cell ? (
                    <svg class="w-5 h-5 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                  ) : (
                    <svg class="w-5 h-5 text-red-500" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
                    </svg>
                  )
                ) : (
                  cell
                )}
              </td>
            ))}
          </tr>
        ))}
      </tbody>
    </table>
  </div>
</div>