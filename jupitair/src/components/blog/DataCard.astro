---
export interface Props {
  title: string;
  value: string | number;
  subtitle?: string;
  icon?: 'clock' | 'dollar' | 'tool' | 'chart' | 'check' | 'alert';
  trend?: 'up' | 'down' | 'neutral';
  class?: string;
}

const { title, value, subtitle, icon = 'chart', trend, class: className = '' } = Astro.props;

