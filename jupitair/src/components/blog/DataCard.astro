  alert: 'M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z'
};

const iconColors = {
  clock: 'text-purple-600',
  dollar: 'text-green-600',
  tool: 'text-amber-600',
  chart: 'text-blue-600',
  check: 'text-emerald-600',
  alert: 'text-red-600'
};
---

<div class={`bg-white rounded-xl border border-gray-200 p-6 hover:shadow-lg transition-shadow duration-300 ${className}`}>
  <div class="flex items-start justify-between mb-4">
    <div class="flex items-center gap-3">
      <div class={`p-2 rounded-lg bg-gray-50`}>
        <svg class={`w-6 h-6 ${iconColors[icon]}`} fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d={icons[icon]} clip-rule="evenodd"/>
        </svg>
      </div>
      <div>
        <p class="text-sm font-medium text-gray-600">{title}</p>
      </div>
    </div>
    {trend && (
      <div class={`flex items-center gap-1 text-sm font-medium ${
        trend === 'up' ? 'text-green-600' : 
        trend === 'down' ? 'text-red-600' : 
        'text-gray-600'
      }`}>
        {trend === 'up' && '↑'}
        {trend === 'down' && '↓'}
        {trend === 'neutral' && '→'}
      </div>
    )}
  </div>
  <div>
    <p class="text-2xl font-bold text-gray-900">{value}</p>
    {subtitle && (
      <p class="text-sm text-gray-500 mt-1">{subtitle}</p>
    )}
  </div>
</div>