---
export interface Props {
  type?: 'warning' | 'info' | 'success' | 'danger' | 'tip';
  title?: string;
  icon?: boolean;
  class?: string;
}

const { type = 'info', title, icon = true, class: className = '' } = Astro.props;

const styles = {
  warning: {
    bg: 'bg-amber-50',
    border: 'border-amber-200',
    titleColor: 'text-amber-900',
    textColor: 'text-amber-800',
    iconColor: 'text-amber-600',
    iconPath: 'M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z'
  },
  info: {
    bg: 'bg-blue-50',
    border: 'border-blue-200',
    titleColor: 'text-blue-900',
    textColor: 'text-blue-800',
    iconColor: 'text-blue-600',
    iconPath: 'M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z'
  },
  success: {
    bg: 'bg-green-50',
    border: 'border-green-200',
    titleColor: 'text-green-900',
    textColor: 'text-green-800',
    iconColor: 'text-green-600',
    iconPath: 'M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z'
  },
  danger: {
    bg: 'bg-red-50',
    border: 'border-red-200',
    titleColor: 'text-red-900',
    textColor: 'text-red-800',
    iconColor: 'text-red-600',
    iconPath: 'M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z'
  },
  tip: {
    bg: 'bg-purple-50',
    border: 'border-purple-200',
    titleColor: 'text-purple-900',
    textColor: 'text-purple-800',
    iconColor: 'text-purple-600',
    iconPath: 'M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z'
  }
};

const style = styles[type];
---

<div class={`${style.bg} ${style.border} border-l-4 rounded-lg p-6 my-8 ${className}`}>
  <div class="flex items-start gap-4">
    {icon && (
      <svg class={`w-6 h-6 ${style.iconColor} flex-shrink-0 mt-0.5`} fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd" d={style.iconPath} clip-rule="evenodd"/>
      </svg>
    )}
    <div class="flex-1">
      {title && (
        <h3 class={`font-bold ${style.titleColor} mb-2`}>{title}</h3>
      )}
      <div class={style.textColor}>
        <slot />
      </div>
    </div>
  </div>
</div>